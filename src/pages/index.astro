---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import EmailCapture from '../components/EmailCapture.astro';
import FTCDisclosure from '../components/FTCDisclosure.astro';
import { destinationVideoMap } from '../data/destination-videos';
import scottImg from '../images/scott-murray.jpg';

const destinations = await getCollection('destinations');
const allDests = destinations;

// Blog posts ‚Äî latest 3 non-draft
const allBlogPosts = await getCollection('blog', (entry) => {
  return !entry.data.draft;
});
const latestPosts = allBlogPosts.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()).slice(0, 3);

// Video map for destination cards ‚Äî shared data file
const videoMap = destinationVideoMap;

// Featured destinations ‚Äî 15 Italian destinations across 4 regions
const featuredSlugs = ['rome', 'florence', 'venice', 'milan', 'naples', 'amalfi-coast', 'cinque-terre', 'tuscany', 'sicily', 'sardinia', 'bologna', 'lake-como', 'pompeii', 'positano', 'verona'];

// Content pillar links ‚Äî Italy-specific
const pillarLinks = [
  { icon: 'üçù', label: 'Regional Cuisine', desc: 'Pasta, pizza & beyond', url: '/cuisine/' },
  { icon: 'üç∑', label: 'Wine Regions', desc: 'Chianti, Barolo & more', url: '/wine/' },
  { icon: 'üèõÔ∏è', label: 'Art & Architecture', desc: 'Renaissance to modern', url: '/art-architecture/' },
  { icon: 'üèñÔ∏è', label: 'Coastal Escapes', desc: 'Mediterranean coastline', url: '/coastal-escapes/' },
  { icon: '‚è≥', label: 'Ancient History', desc: 'Roman ruins & heritage', url: '/history/' },
  { icon: 'üó∫Ô∏è', label: 'AI Trip Planner', desc: 'Build your itinerary', url: '/plan/' },
];
---
<BaseLayout
  title="Discovering Italy ‚Äî Travel Guides by Scott Murray"
  description="Your comprehensive guide to Italy ‚Äî from the canals of Venice to the ruins of Rome. Honest recommendations, real prices in euros, and first-hand travel experience."
>
  <!-- ============================================================
       HERO ‚Äî CSS gradient with Italy theme
       ============================================================ -->
  <header class="hp-hero">
    <div class="hp-hero-gradient" />
    <div class="hp-hero-noise" />

    <div class="hp-hero-content">
      <h1 class="hp-hero-title">Italy Through My Eyes</h1>
      <p class="hp-hero-subtitle">I'm Scott Murray ‚Äî an American traveler with a deep love for Italy. These are the cities I keep returning to, the restaurants where I actually eat, and the prices I actually paid. From the Dolomites to Sicily, this is Italy without the tourist traps.</p>
      <div class="hp-hero-actions">
        <a href="#destinations" class="hp-btn hp-btn--primary">Explore Destinations</a>
        <a href="/plan/" class="hp-btn hp-btn--secondary">Plan Your Trip</a>
      </div>
    </div>

    <div class="hp-scroll-hint">Scroll<br />&#8595;</div>
  </header>

  <!-- ============================================================
       TRUST BAR ‚Äî Stats strip
       ============================================================ -->
  <section class="hp-trust-bar">
    <div class="container-content">
      <div class="hp-trust-stats">
        <a href="/about/scott/" class="hp-trust-person hp-trust-link">
          <Image src={scottImg} alt="Scott Murray" class="hp-trust-avatar" width={48} height={48} format="webp" loading="eager" />
          <div class="hp-trust-person-info">
            <div class="hp-trust-person-stats">
              <div class="hp-trust-stat">
                <span class="hp-trust-number">15+</span>
                <span class="hp-trust-label">Trips to Italy</span>
              </div>
              <div class="hp-trust-stat">
                <span class="hp-trust-number">4</span>
                <span class="hp-trust-label">Regions Covered</span>
              </div>
              <div class="hp-trust-stat">
                <span class="hp-trust-number">15</span>
                <span class="hp-trust-label">Destinations</span>
              </div>
            </div>
            <p class="hp-trust-quote">"Italy is where I learned that travel isn't about checking boxes ‚Äî it's about slowing down."</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- ============================================================
       EXPLORE BY REGION ‚Äî Region cards
       ============================================================ -->
  <section class="hp-immersive-header">
    <div class="hp-immersive-gradient" style="background: linear-gradient(160deg, #091e2f 0%, #0c3547 35%, #0D7377 65%, #091e2f 100%);" />
    <div class="hp-immersive-content">
      <h2 class="hp-immersive-title">Explore by Region</h2>
      <p class="hp-immersive-text">From the Alpine lakes of the north to the sun-drenched islands of the south, Italy offers an incredible diversity of landscapes, cultures, and cuisines.</p>
    </div>
  </section>

  <section class="hp-regions" id="regions">
    <div class="container-content">
      <div class="hp-region-grid">
        <div class="hp-region-card">
          <div class="hp-region-card-header"><div class="hp-region-card-name">Northern Italy</div><div class="hp-region-card-count">4 destinations</div></div>
          <p class="hp-region-card-desc">Alpine lakes, fashion capital Milan, Renaissance art in Venice, and the culinary heart of Bologna. Where Italy feels most European.</p>
          <div class="hp-region-tags">
            <a class="hp-dest-chip" href="/destinations/venice/">Venice</a>
            <a class="hp-dest-chip" href="/destinations/milan/">Milan</a>
            <a class="hp-dest-chip" href="/destinations/bologna/">Bologna</a>
            <a class="hp-dest-chip" href="/destinations/lake-como/">Lake Como</a>
          </div>
        </div>
        <div class="hp-region-card">
          <div class="hp-region-card-header"><div class="hp-region-card-name">Central Italy</div><div class="hp-region-card-count">5 destinations</div></div>
          <p class="hp-region-card-desc">The Eternal City, Tuscan rolling hills, Renaissance Florence, and colorful Cinque Terre villages clinging to coastal cliffs.</p>
          <div class="hp-region-tags">
            <a class="hp-dest-chip" href="/destinations/rome/">Rome</a>
            <a class="hp-dest-chip" href="/destinations/florence/">Florence</a>
            <a class="hp-dest-chip" href="/destinations/cinque-terre/">Cinque Terre</a>
            <a class="hp-dest-chip" href="/destinations/tuscany/">Tuscany</a>
            <a class="hp-dest-chip" href="/destinations/verona/">Verona</a>
          </div>
        </div>
        <div class="hp-region-card">
          <div class="hp-region-card-header"><div class="hp-region-card-name">Southern Italy</div><div class="hp-region-card-count">4 destinations</div></div>
          <p class="hp-region-card-desc">Naples' electric energy, the dramatic Amalfi Coast, pastel-colored Positano, and the haunting ruins of Pompeii. Raw, real, unforgettable.</p>
          <div class="hp-region-tags">
            <a class="hp-dest-chip" href="/destinations/naples/">Naples</a>
            <a class="hp-dest-chip" href="/destinations/amalfi-coast/">Amalfi Coast</a>
            <a class="hp-dest-chip" href="/destinations/positano/">Positano</a>
            <a class="hp-dest-chip" href="/destinations/pompeii/">Pompeii</a>
          </div>
        </div>
        <div class="hp-region-card">
          <div class="hp-region-card-header"><div class="hp-region-card-name">Islands</div><div class="hp-region-card-count">2 destinations</div></div>
          <p class="hp-region-card-desc">Sicily's ancient Greek temples and street food paradise. Sardinia's turquoise coves and rugged beauty. Two islands, two worlds.</p>
          <div class="hp-region-tags">
            <a class="hp-dest-chip" href="/destinations/sicily/">Sicily</a>
            <a class="hp-dest-chip" href="/destinations/sardinia/">Sardinia</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================================
       IN-DEPTH GUIDES ‚Äî Destination grid
       ============================================================ -->
  <section class="hp-immersive-header" id="destinations">
    <div class="hp-immersive-gradient" style="background: linear-gradient(160deg, #064E3B 0%, #0D7377 35%, #0E7490 65%, #1A2332 100%);" />
    <div class="hp-immersive-content">
      <h2 class="hp-immersive-title">In-Depth Destination Guides</h2>
      <p class="hp-immersive-text">Every price verified in euros. Every restaurant visited. Every tip from personal experience across 15 Italian destinations.</p>
    </div>
  </section>

  <section class="hp-destinations reveal">
    <div class="container-content">
      <div class="hp-dest-grid">
        {featuredSlugs.map((slug) => {
          const dest = allDests.find(d => d.slug === slug || d.id === slug);
          if (!dest) return null;
          const { title, tagline, region, budgetPerDay } = dest.data;
          const gradientVar = `var(--gradient-${slug}, var(--gradient-homepage))`;
          const videoSrc = videoMap[slug] || '';
          const posterSrc = videoSrc ? videoSrc.replace('/destinations/', '/destinations/posters/').replace('.mp4', '.jpg') : '';
          return (
            <a href={`/destinations/${dest.slug || dest.id}/`} class="hp-dest-card">
              <div class="hp-dest-card-bg" style={`background: ${gradientVar};`}>
                {videoSrc && (
                  <video class="hp-dest-card-video" muted loop playsinline preload="none" poster={posterSrc} data-src={videoSrc}>
                  </video>
                )}
              </div>
              <div class="hp-dest-card-body">
                <span class="hp-dest-card-region">{region}</span>
                <h3 class="hp-dest-card-title">{title}</h3>
                {tagline && <p class="hp-dest-card-tagline">{tagline}</p>}
                {budgetPerDay && (
                  <p class="hp-dest-card-budget">From &euro;{budgetPerDay.backpacker}/day</p>
                )}
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- ============================================================
       LATEST FROM THE BLOG
       ============================================================ -->
  {latestPosts.length > 0 && (
    <section class="hp-immersive-header">
      <div class="hp-immersive-gradient" style="background: linear-gradient(160deg, #1A2332 0%, #2C5F2D 35%, #0D7377 65%, #1A2332 100%);" />
      <div class="hp-immersive-content">
        <h2 class="hp-immersive-title">Latest from the Blog</h2>
        <p class="hp-immersive-text">Stories, tips, and travel memories from years of exploring Italy.</p>
      </div>
    </section>

    <section class="hp-blog reveal">
      <div class="container-content">
        <div class="hp-blog-grid">
          {latestPosts.map((post) => (
            <a class="hp-blog-card" href={`/blog/${post.slug || post.id}/`}>
              <div class="hp-blog-card-img" style={`background: var(--gradient-homepage);`}>
                {post.data.heroVideo && (
                  <video class="hp-blog-card-video" muted loop playsinline preload="none" data-src={post.data.heroVideo}></video>
                )}
                {post.data.heroImage && !post.data.heroVideo && (
                  <img src={post.data.heroImage} alt={post.data.title} loading="lazy" />
                )}
                {post.data.category && (
                  <span class="hp-blog-card-category">{post.data.category}</span>
                )}
              </div>
              <div class="hp-blog-card-body">
                <h3 class="hp-blog-card-title">{post.data.title}</h3>
                <p class="hp-blog-card-desc">{post.data.description}</p>
                <div class="hp-blog-card-meta">
                  <span>{post.data.author || 'Scott Murray'}</span>
                  <span>&middot;</span>
                  <span>{new Date(post.data.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric', timeZone: 'UTC' })}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
        <div class="hp-blog-cta">
          <a href="/blog/" class="hp-blog-cta-link">View All Posts &rarr;</a>
        </div>
      </div>
    </section>
  )}

  <!-- ============================================================
       WHAT MAKES THIS DIFFERENT ‚Äî Proof cards
       ============================================================ -->
  <section class="hp-immersive-header">
    <div class="hp-immersive-gradient" style="background: linear-gradient(160deg, #1A2332 0%, #2d3748 35%, #1a3a3c 65%, #1A2332 100%);" />
    <div class="hp-immersive-content">
      <h2 class="hp-immersive-title">What Makes This Different</h2>
      <p class="hp-immersive-text">No press trips. No sponsored stays. Just years of personal experience across Italy.</p>
    </div>
  </section>

  <section class="hp-proof reveal">
    <div class="container-content">
      <div class="hp-proof-grid">
        <div class="hp-proof-card">
          <h3 class="hp-proof-headline">Real Prices in Euros</h3>
          <p class="hp-proof-subhead">"Every price is one I paid"</p>
          <p class="hp-proof-detail">&euro;4 espresso at a Roman piazza. &euro;12 margherita at Da Michele in Naples. &euro;85/night boutique hotel in Florence. I verify every number on-site.</p>
        </div>
        <div class="hp-proof-card">
          <h3 class="hp-proof-headline">Beyond the Tourist Trail</h3>
          <p class="hp-proof-subhead">"The Italy most visitors never see"</p>
          <p class="hp-proof-detail">The trattoria with no English menu in Trastevere. The hidden beach in Cinque Terre. The wine bar in Bologna where locals actually drink. This is lived experience, not guidebook research.</p>
        </div>
        <div class="hp-proof-card">
          <h3 class="hp-proof-headline">No Sponsored Content</h3>
          <p class="hp-proof-subhead">"I don't take press trips"</p>
          <p class="hp-proof-detail">No hotel comps, no tourism board deals. I pay full price and tell you what I actually think. Every recommendation is something I'd tell a friend.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================================
       YOUR GUIDE ‚Äî Scott Murray (E-E-A-T)
       ============================================================ -->
  <section class="hp-immersive-header">
    <div class="hp-immersive-gradient" style="background: linear-gradient(160deg, #0E4D5C 0%, #0D7377 40%, #14B8A6 70%, #064E3B 100%);" />
    <div class="hp-immersive-content">
      <h2 class="hp-immersive-title">Your Guide</h2>
      <p class="hp-immersive-text">An American traveler with 15+ trips to Italy and a passion for uncovering the real country behind the postcards.</p>
    </div>
  </section>

  <section class="hp-guides reveal">
    <div class="container-content">
      <p class="hp-guides-intro">Most Italy travel advice comes from bloggers who visited for a week. I've been exploring Italy for over a decade ‚Äî from my first nervous attempt at ordering in Italian at a Roman trattoria to navigating the backroads of Sicily by rental car. I focus on real logistics, honest prices, and the kind of practical detail that makes or breaks an Italian adventure.</p>
      <div class="hp-guides-grid hp-guides-grid--single">
        <a class="hp-guide-card" href="/about/scott/">
          <Image src={scottImg} alt="Scott Murray" class="hp-guide-avatar" width={72} height={72} format="webp" loading="lazy" />
          <h3>Scott Murray</h3>
          <p class="hp-guide-stat">15+ trips across all regions</p>
          <p class="hp-guide-role">Logistics, Route Planning & Budget</p>
          <p class="hp-guide-bio">Train schedules, budget breakdowns, restaurant recommendations, and the practical details that make or break an Italy trip. From Alpine lakes to Mediterranean islands.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- ============================================================
       EXPLORE ‚Äî Content pillar cross-links
       ============================================================ -->
  <section class="hp-immersive-header">
    <div class="hp-immersive-gradient" style="background: linear-gradient(160deg, #1a1035 0%, #4C1D95 35%, #3730A3 65%, #1A2332 100%);" />
    <div class="hp-immersive-content">
      <h2 class="hp-immersive-title">Explore by Interest</h2>
      <p class="hp-immersive-text">Regional cuisine guides, wine region tours, Renaissance art trails, coastal escapes, and ancient Roman history.</p>
    </div>
  </section>

  <section class="hp-pillars reveal">
    <div class="container-content">
      <div class="hp-pillars-grid">
        {pillarLinks.map((pillar) => (
          <a class="hp-pillar-card" href={pillar.url}>
            <span class="hp-pillar-icon">{pillar.icon}</span>
            <span class="hp-pillar-label">{pillar.label}</span>
            <span class="hp-pillar-desc">{pillar.desc}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- ============================================================
       EMAIL CAPTURE
       ============================================================ -->
  <section class="hp-immersive-header">
    <div class="hp-immersive-gradient" style="background: linear-gradient(160deg, #78350F 0%, #B45309 35%, #D97706 65%, #1A2332 100%);" />
    <div class="hp-immersive-content">
      <h2 class="hp-immersive-title">Start Planning</h2>
      <p class="hp-immersive-text">Get our free Italy travel checklist ‚Äî train routes, packing lists, and budget tips I wish I'd had on my first trip.</p>
    </div>
  </section>

  <section class="hp-email reveal">
    <div class="container-content">
      <EmailCapture leadMagnet="Free Italy Travel Checklist" />
    </div>
  </section>

  <!-- FTC Disclosure -->
  <div class="container-content">
    <FTCDisclosure placement="inline" />
  </div>
</BaseLayout>

<!-- Scroll Reveal Observer -->
<script>
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    const revealObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add('visible');
          }
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
    );
    document.querySelectorAll('.reveal').forEach((el) => revealObserver.observe(el));
  } else {
    document.querySelectorAll('.reveal').forEach((el) => el.classList.add('visible'));
  }
</script>

<!-- Play video on hover/touch, pause on leave -->
<script>
  document.querySelectorAll('.hp-dest-card, .hp-blog-card').forEach((card) => {
    const video = card.querySelector('.hp-dest-card-video, .hp-blog-card-video') as HTMLVideoElement | null;
    if (!video) return;

    function startVideo() {
      if (!video!.getAttribute('src') && video!.dataset.src) {
        video!.src = video!.dataset.src;
      }
      video!.play().catch(() => {});
    }

    card.addEventListener('mouseenter', startVideo);
    card.addEventListener('touchstart', startVideo, { passive: true });
    card.addEventListener('mouseleave', () => { video!.pause(); });
  });
</script>

<style>
  /* ================================================================
     HERO ‚Äî Full-viewport with CSS gradient (Italy themed)
     ================================================================ */
  .hp-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 0 var(--space-6) 80px;
    overflow: hidden;
  }

  .hp-hero-gradient {
    position: absolute;
    inset: 0;
    z-index: 1;
    background:
      linear-gradient(160deg,
        #1A2332 0%,
        #0c3547 20%,
        #0D7377 40%,
        #095456 55%,
        #E8654A 75%,
        #D4A574 90%,
        #F5F0E8 100%
      );
  }

  .hp-hero-noise {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
