  }

  .hp-hero-subtitle {
    font-size: var(--text-body);
    color: rgba(255, 255, 255, 0.85);
    max-width: 55ch;
    line-height: var(--leading-body);
    margin-bottom: var(--space-8);
  }

  .hp-hero-actions {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .hp-btn {
    padding: var(--space-3) var(--space-6);
