---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import FAQ from '../../components/FAQ.astro';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Travel Tips', url: '/practical/' },
];

const pageTitle = 'Italy Travel Tips ‚Äî Visa, Money, Transport & Safety Guide 2026';
const pageDescription = 'Everything you need before your first (or tenth) trip to Italy ‚Äî Schengen visa rules, euros, trains, safety, packing, and cultural etiquette.';

interface TopicSection {
  id: string;
  icon: string;
  title: string;
  gradient: string;
  video?: string;
  items: { label: string; text: string }[];
}

const topics: TopicSection[] = [
  {
    id: 'visa',
    icon: 'üõÇ',
    title: 'Visa & Entry Requirements',
    gradient: 'linear-gradient(135deg, #1565C0 0%, #42A5F5 100%)',
    video: '/videos/pillar/practical-break-visa.mp4',
    items: [
      { label: 'Schengen Visa-Free', text: 'Citizens of the US, UK, Canada, Australia, Japan, and 50+ other countries can enter Italy visa-free for up to 90 days within any 180-day period. Italy is part of the Schengen Area, so your 90 days cover all Schengen countries combined.' },
      { label: 'ETIAS (Starting 2026)', text: 'The EU\'s new ETIAS travel authorization system requires visa-exempt travelers to register online before arrival. It costs around 7 EUR, is valid for 3 years, and takes minutes to complete. Apply at etias.com before your trip.' },
      { label: 'Documents to Carry', text: 'Keep your passport on you at all times ‚Äî Italian law requires foreigners to carry valid ID. Hotels will photocopy your passport at check-in (required by law). Your passport must be valid for at least 3 months beyond your planned departure from the Schengen area.' },
      { label: 'EU Citizens', text: 'EU/EEA citizens can enter Italy with just a national ID card ‚Äî no passport needed. There are no time limits on stays for EU nationals. A European Health Insurance Card (EHIC) provides access to state-run healthcare.' },
      { label: 'Customs & Duty-Free', text: 'Non-EU travelers can bring up to 200 cigarettes and 1 liter of spirits duty-free. Declare anything over 10,000 EUR in cash. Keep receipts for luxury purchases ‚Äî you can claim a VAT refund (around 12-15%) at the airport on purchases over 154.94 EUR from participating stores.' },
    ],
  },
  {
    id: 'money',
    icon: 'üí∞',
    title: 'Money & ATMs',
    gradient: 'linear-gradient(135deg, #2E7D32 0%, #66BB6A 100%)',
    video: '/videos/pillar/practical-break-money.mp4',
    items: [
      { label: 'Currency: The Euro', text: 'Italy uses the Euro (EUR/‚Ç¨). Coins come in 1c, 2c, 5c, 10c, 20c, 50c, 1 EUR, and 2 EUR denominations. Bills run from 5 EUR to 500 EUR (though 500s are rarely accepted). As of 2026, 1 USD is roughly 0.92 EUR.' },
      { label: 'ATM Strategy', text: 'Use bank ATMs (Bancomat) attached to major banks like Intesa Sanpaolo, UniCredit, or Banca Nazionale del Lavoro. Avoid standalone ATMs in tourist areas ‚Äî they charge 3-5 EUR fees and terrible exchange rates. Always choose "withdraw without conversion" to avoid dynamic currency conversion markups.' },
      { label: 'Card Payments', text: 'Credit and debit cards are widely accepted in cities, hotels, and restaurants. Visa and Mastercard work everywhere; Amex is less common. Small shops, markets, trattorias, and some taxis may be cash-only ‚Äî always carry at least 50-100 EUR in cash.' },
      { label: 'Tipping Norms', text: 'Tipping is not mandatory in Italy. Restaurants include a "coperto" (cover charge) of 1-3 EUR per person ‚Äî this is NOT a tip. For exceptional service, rounding up or leaving 5-10% is appreciated but not expected. Tip 1-2 EUR for hotel porters. Taxi drivers: round up to the nearest euro.' },
      { label: 'Daily Budget Ranges', text: 'Budget: 50-80 EUR/day ‚Äî hostels, pizza al taglio, public transport. Mid-range: 120-200 EUR/day ‚Äî 3-star hotels, trattorias, museums. Luxury: 300+ EUR/day ‚Äî boutique hotels, fine dining, private tours.' },
      { label: 'VAT Refund', text: 'Non-EU residents can claim a VAT refund on purchases over 154.94 EUR from a single store. Ask for a Tax-Free form at checkout, get it stamped at customs before checking luggage, then claim cash or card credit at the airport refund desk.' },
    ],
  },
  {
    id: 'transport',
    icon: 'üöÇ',
    title: 'Getting Around',
    gradient: 'linear-gradient(135deg, #E65100 0%, #FF9800 100%)',
    video: '/videos/pillar/practical-break-transport.mp4',
    items: [
      { label: 'High-Speed Trains', text: 'Trenitalia\'s Frecciarossa and Italo\'s NTV trains connect Rome, Florence, Milan, Naples, Venice, and Bologna at up to 300 km/h. Rome to Florence is 1.5 hours; Rome to Milan is 3 hours. Book 2-4 weeks ahead for the best fares ‚Äî tickets start at 19-29 EUR one-way.' },
      { label: 'Regional Trains', text: 'Trenitalia Regionale trains connect smaller cities and towns at lower cost. They\'re slower but go everywhere ‚Äî perfect for reaching hill towns and coastal villages. Tickets are cheap (3-15 EUR) and can often be bought same-day. Validate paper tickets before boarding.' },
      { label: 'Buses', text: 'FlixBus and Marino cover long-distance routes between cities, often cheaper than trains. For rural areas and hill towns (Tuscany, Umbria, Amalfi Coast), local SITA or Cotral buses are essential. The Amalfi Coast bus is an experience in itself ‚Äî stunning views, terrifying hairpins.' },
      { label: 'Ferries to Islands', text: 'Ferries connect the mainland to Sicily (from Villa San Giovanni), Sardinia (from Civitavecchia, Genoa, or Livorno), Capri (from Naples/Sorrento), and the Aeolian Islands (from Milazzo). Book ahead in summer ‚Äî Tirrenia, Moby, GNV, and SNAV are the major operators.' },
      { label: 'Rental Cars', text: 'Useful for Tuscany, Puglia, Sicily, and the Amalfi Coast ‚Äî where trains don\'t reach. An international driving permit (IDP) is technically required for non-EU licenses. ZTL zones (limited traffic zones) in city centers will trigger automatic fines if you drive in. Stick to manual transmission ‚Äî automatics cost significantly more.' },
      { label: 'City Transport & Taxis', text: 'Rome, Milan, Naples, and Turin have metro systems. Buses and trams serve all major cities. Buy tickets before boarding at tabacchi shops or machines. Licensed taxis are white and metered ‚Äî always insist the meter is running. Uber exists in Rome and Milan but is limited to licensed vehicles.' },
    ],
  },
  {
    id: 'connectivity',
    icon: 'üì±',
    title: 'SIM Cards & Connectivity',
    gradient: 'linear-gradient(135deg, #6A1B9A 0%, #AB47BC 100%)',
    video: '/videos/pillar/practical-break-connectivity.mp4',
    items: [
      { label: 'eSIM & Local SIMs', text: 'The easiest option is an eSIM from Airalo or Holafly ‚Äî set it up before you land. For physical SIMs, TIM, Vodafone, and WindTre all sell tourist SIM cards at their stores and at airports. Expect to pay 15-30 EUR for 30 days with 50-100 GB of data. Bring your passport ‚Äî it\'s required for SIM registration.' },
      { label: 'US Carrier Coverage', text: 'T-Mobile includes free international data (at 2G speeds) and texting. Google Fi works seamlessly abroad with high-speed data. AT&T International Day Pass costs $12/day. If your plan covers Europe, you may not need a local SIM at all.' },
      { label: 'WiFi Availability', text: 'Free WiFi is available at most hotels, many cafes, and some public spaces. Italian WiFi can be slower than what you\'re used to ‚Äî 10-30 Mbps is typical. Train stations and airports have free WiFi (often time-limited). Having mobile data as backup is recommended.' },
      { label: 'Messaging', text: 'WhatsApp is the dominant messaging app in Italy ‚Äî restaurants, tour operators, and hotels often prefer it. Download it before your trip. FaceTime and iMessage work normally over WiFi or data.' },
    ],
  },
  {
    id: 'safety',
    icon: 'üè•',
    title: 'Safety & Health',
    gradient: 'linear-gradient(135deg, #C62828 0%, #EF5350 100%)',
    video: '/videos/pillar/practical-break-safety.mp4',
    items: [
      { label: 'Travel Insurance', text: 'Get a policy that covers medical expenses and trip cancellation. Italian emergency rooms will treat you regardless of insurance, but a hospital visit without coverage can cost thousands. We use <a href="https://safetywing.com/?referenceID=24858745&utm_source=24858745&utm_medium=Ambassador" target="_blank" rel="noopener sponsored">SafetyWing</a> for every trip ‚Äî affordable and covers you worldwide.' },
      { label: 'EHIC / GHIC (EU Citizens)', text: 'EU citizens should carry a European Health Insurance Card (EHIC) or UK Global Health Insurance Card (GHIC). It covers state-provided medical treatment at the same cost as Italian residents ‚Äî meaning most emergency care is free or very low cost.' },
      { label: 'Hospitals & Pharmacies', text: 'Italy has excellent hospitals (ospedali) in every major city. In emergencies, call 118 for an ambulance. Pharmacies (farmacie, marked with a green cross) can dispense many medications without a prescription and provide basic medical advice. Rotation schedules ensure at least one pharmacy is open 24/7 in each area.' },
      { label: 'Tap Water', text: 'Tap water in Italy is safe to drink everywhere. Rome\'s public drinking fountains (nasoni) provide fresh, cold water throughout the city ‚Äî look for the small metal spouts on street corners. Restaurants may push bottled water (acqua minerale), but you can always ask for "acqua del rubinetto" (tap water).' },
      { label: 'Pickpocket Awareness', text: 'Pickpocketing is the primary safety concern in Rome, Florence, Naples, Milan, and Venice ‚Äî especially on public transport, at tourist attractions, and in crowded markets. Use a money belt or front-zip bag. Keep your phone in your front pocket. Watch for distraction techniques: fake petitions, bracelet sellers, groups of children. Stay alert, and you\'ll be fine.' },
      { label: 'Driving Safety', text: 'Italian drivers are aggressive by Northern European or American standards. Motorways (autostrade) are toll roads ‚Äî carry cash or a card for tolls. Speed cameras are everywhere and fines follow you home. Avoid driving in major city centers ‚Äî ZTL cameras will ticket you automatically.' },
    ],
  },
  {
    id: 'packing',
    icon: 'üéí',
    title: 'Packing Essentials',
    gradient: 'linear-gradient(135deg, #78350F 0%, #D97706 100%)',
    video: '/videos/pillar/practical-break-packing.mp4',
    items: [
      { label: 'Church & Museum Dress Code', text: 'Italy\'s major churches (Vatican, Duomo di Milano, St. Mark\'s) enforce strict dress codes: covered shoulders and knees for both men and women. Carry a lightweight scarf or shawl in your day bag ‚Äî you\'ll be turned away without one. This applies year-round.' },
      { label: 'Power Adapters', text: 'Italy uses Type L (3 round pins) and Type C (2 round pins) plugs at 230V. Bring a universal adapter or a European plug adapter. Your phone chargers and laptops are dual-voltage and work fine. Hair dryers and curling irons need to be rated 110-240V ‚Äî check before plugging in.' },
      { label: 'Comfortable Walking Shoes', text: 'Italian cities are built on cobblestones, hills, and uneven stone paths. Wear proper walking shoes ‚Äî not flip-flops, not brand-new shoes. Break them in before your trip. You\'ll walk 10-15 km per day easily in Rome, Florence, or Venice.' },
      { label: 'Sunscreen & Hat', text: 'Southern Italy, Sicily, and Sardinia get intense summer sun. Bring SPF 50+ sunscreen, a hat, and sunglasses. The Mediterranean UV index hits 9-10+ in July and August. Sunburn can ruin beach days along the Amalfi Coast and Puglia.' },
      { label: 'Layers for Evening', text: 'Even in summer, Italian evenings cool down ‚Äî especially in hill towns, lake regions, and northern cities. A light jacket or cardigan is essential for outdoor dining. Spring and fall require a proper jacket, especially in Milan, Venice, and the Dolomites.' },
      { label: 'Day Bag', text: 'Carry a crossbody bag or small backpack for daily exploring ‚Äî phone, water bottle, sunscreen, adapter, and cash. Anti-theft bags with hidden zippers are worth the investment in Rome and Naples. Leave valuables in the hotel safe.' },
    ],
  },
  {
    id: 'culture',
    icon: 'üáÆüáπ',
    title: 'Language & Cultural Etiquette',
    gradient: 'linear-gradient(135deg, #0D7377 0%, #14B8A6 100%)',
    video: '/videos/pillar/practical-break-culture.mp4',
    items: [
      { label: 'Basic Italian Phrases', text: '"Buongiorno" (good morning/hello), "Buonasera" (good evening), "Grazie" (thank you), "Per favore" (please), "Scusi" (excuse me), "Mi scusi" (formal excuse me), "Quanto costa?" (how much?), "Il conto, per favore" (the bill, please), "Dov\'e il bagno?" (where\'s the bathroom?). Even a few words earn a warmer welcome.' },
      { label: 'Greetings & Formality', text: 'Italians greet with "Buongiorno" until early afternoon, then switch to "Buonasera." Use "Lei" (formal you) with strangers and older people. "Ciao" is informal ‚Äî only use it with people you know or who say it first. A handshake is standard; close acquaintances do the two-cheek kiss (left first).' },
      { label: 'Dining Etiquette', text: 'Lunch is typically 12:30-2:30 PM, dinner 7:30-10:00 PM. Don\'t ask for butter with bread at dinner. Don\'t order cappuccino after 11 AM (espresso is fine anytime). Pasta is a first course, not a main ‚Äî ordering only pasta is perfectly acceptable. "Coperto" is a cover charge, not a tip. Ask for "il conto" when ready ‚Äî it won\'t come automatically.' },
      { label: 'Coffee Culture', text: 'Coffee at the bar (standing) is cheaper than sitting at a table. Espresso is the default ‚Äî order "un caffe" and you\'ll get an espresso. Cappuccino is a morning drink only. "Caffe macchiato" is espresso with a dash of milk. Pay at the cassa (register) first in busy bars, then bring the receipt to the barista.' },
      { label: 'La Passeggiata', text: 'The evening stroll ‚Äî Italians dress up and walk through town between 5-8 PM. It\'s social, leisurely, and one of the best ways to experience local life. Join in. It\'s the reason Italian towns feel so alive in the evening.' },
      { label: 'Regional Pride', text: 'Italy is intensely regional. Neapolitans, Romans, Florentines, Milanese, and Sicilians all have distinct identities, dialects, and cuisines. Don\'t compare regions or suggest one is better than another. Each city and region takes immense pride in its own traditions.' },
    ],
  },
];
---
<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageType="destination"
  schemaData={{ title: pageTitle, description: pageDescription }}
  breadcrumbs={breadcrumbs}
>
  <!-- Hero -->
  <header class="prac-hero">
    <video class="prac-hero-video" autoplay muted loop playsinline preload="metadata">
      <source src="/videos/pillar/practical-hero.mp4" type="video/mp4" />
    </video>
    <div class="prac-hero-gradient"></div>
    <div class="prac-hero-noise"></div>
    <div class="prac-hero-content">
      <h1 class="prac-hero-title">Italy Travel Essentials</h1>
      <p class="prac-hero-subtitle">Schengen visa rules, euro strategy, train travel, safety tips, packing lists, and the cultural etiquette that turns a good trip into a great one.</p>
      <div class="prac-hero-meta">
        <div class="prac-hero-meta-item">
          <span class="prac-hero-meta-label">Topics</span>
          <span class="prac-hero-meta-value">7</span>
        </div>
        <div class="prac-hero-meta-item">
          <span class="prac-hero-meta-label">Updated</span>
          <span class="prac-hero-meta-value">Feb 2026</span>
        </div>
        <div class="prac-hero-meta-item">
          <span class="prac-hero-meta-label">Trips</span>
          <span class="prac-hero-meta-value">25+</span>
        </div>
      </div>
    </div>
    <div class="prac-scroll-hint">Scroll<br />&#8595;</div>
  </header>

  <!-- Breadcrumb -->
  <div class="container-content">
    <Breadcrumb items={breadcrumbs} />
  </div>

  <!-- Personal intro -->
  <section class="prac-personal reveal">
    <div class="container-content">
      <blockquote class="prac-personal-quote">
        <p>We've made every mistake in this guide at least once ‚Äî from getting fined for driving into a ZTL zone in Florence to ordering cappuccino after dinner in Rome (never again). After 25+ trips together, we've figured out the practical side of Italian travel so you don't have to learn the hard way. This is the cheat sheet we wish someone had handed us on our first trip.</p>
        <cite>‚Äî Scott &amp; Scott</cite>
      </blockquote>
    </div>
  </section>

  <!-- Quick Nav -->
  <section class="prac-quicknav reveal">
    <div class="container-content">
      <div class="prac-quicknav-grid">
        {topics.map((t) => (
          <a href={`#${t.id}`} class="prac-quicknav-chip">
            <span class="prac-quicknav-icon">{t.icon}</span>
            <span class="prac-quicknav-label">{t.title.split(' ').slice(0, 2).join(' ')}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Topic Sections -->
  {topics.map((topic) => (
    <section class="prac-topic reveal" id={topic.id}>
      <div class="container-content">
        <div class="prac-topic-header" style={`background: ${topic.gradient};`}>
          {topic.video && (
            <video class="prac-topic-video" autoplay muted loop playsinline preload="none">
              <source src={topic.video} type="video/mp4" />
            </video>
          )}
          <div class="prac-topic-header-inner">
            <span class="prac-topic-icon">{topic.icon}</span>
            <h2 class="prac-topic-title">{topic.title}</h2>
            <span class="prac-topic-count">{topic.items.length} tips</span>
          </div>
        </div>

        <div class="prac-tip-grid">
          {topic.items.map((item) => (
            <div class="prac-tip-card">
              <h3 class="prac-tip-label">{item.label}</h3>
              <p class="prac-tip-text" set:html={item.text} />
            </div>
          ))}
        </div>

        {topic.id === 'transport' && (
          <div class="prac-transport-widget">
            <h3 class="prac-transport-widget-title">Search Routes & Book Transport</h3>
            <p class="prac-transport-widget-desc">Compare trains, buses, and ferries between Italian destinations.</p>
            <div class="prac-transport-widget-inner">
              <p style="font-size: 0.85rem; color: var(--color-slate);">Use <a href="https://www.trenitalia.com" target="_blank" rel="noopener">Trenitalia</a> or <a href="https://www.italotreno.it" target="_blank" rel="noopener">Italo</a> to search and book train routes across Italy.</p>
            </div>
          </div>
        )}
      </div>
    </section>
  ))}

  <!-- Affiliate Disclosure -->
  <div class="container-content reveal" style="padding-bottom: 0;">
    <p class="prac-affiliate-disclosure">Some links on this page are affiliate links ‚Äî we earn a small commission if you purchase through them, at no extra cost to you. We only recommend gear we personally use on our Italy trips. <a href="/legal/affiliate-disclosure/">Full disclosure</a>.</p>
  </div>

  <!-- Bottom CTA -->
  <section class="prac-cta-section reveal">
    <div class="container-content">
      <div class="prac-cta-card">
        <h2 class="prac-cta-heading">Plan Your Italy Trip</h2>
        <p class="prac-cta-text">Tell our AI planner your dates, budget, and interests ‚Äî it builds a custom day-by-day itinerary with trains, hotels, and activities.</p>
        <a href="/plan/" class="prac-cta-button">Start Planning &rarr;</a>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQ items={[
    { question: "Do I need a visa to visit Italy?", answer: "Most nationalities (US, UK, Canada, Australia, Japan, and 50+ others) can enter Italy visa-free for up to 90 days within a 180-day period. Italy is part of the Schengen Area, so this covers all Schengen countries combined. Starting in 2026, visa-exempt travelers will also need ETIAS authorization (7 EUR, valid for 3 years). Bring your passport with at least 3 months' validity beyond your departure date." },
    { question: "Is Italy safe for tourists?", answer: "Italy is very safe for tourists. Violent crime against visitors is extremely rare. The main concern is petty theft ‚Äî pickpocketing is common in Rome, Florence, Naples, Milan, and Venice, especially on public transport and at tourist hotspots. Use common sense: carry a crossbody bag, keep your phone in a front pocket, be alert in crowds. Avoid walking alone in poorly lit areas at night. Tourist areas are well-policed." },
    { question: "How much does a trip to Italy cost?", answer: "Budget travelers: 50-80 EUR/day covers hostels, pizza al taglio, and public transport. Mid-range: 120-200 EUR/day for 3-star hotels, trattorias, and museum entry. Luxury: 300+ EUR/day for boutique hotels, fine dining, and private tours. A 7-day mid-range trip for two costs roughly 2,500-4,000 EUR total including accommodation, meals, transport, and activities." },
    { question: "What is the best way to get around Italy?", answer: "High-speed trains (Trenitalia Frecciarossa, Italo) connect major cities quickly and affordably ‚Äî Rome to Florence is 1.5 hours, Rome to Naples is 70 minutes. Regional trains reach smaller towns. Rent a car for Tuscany, Puglia, Sicily, and the Amalfi Coast. Ferries connect the mainland to Sicily, Sardinia, Capri, and the Aeolian Islands. In cities, use metro, buses, or walk ‚Äî most historic centers are compact." },
    { question: "When is the best time to visit Italy?", answer: "April-June and September-October offer the best combination of warm weather, manageable crowds, and lower prices. July-August is peak season ‚Äî hot, crowded, and expensive, but perfect for beach destinations and island ferries. Ski season runs December-March in the Dolomites and Alps. Winter in cities like Rome and Florence is mild and uncrowded, with the best hotel deals." },
    { question: "Do I need to speak Italian?", answer: "English is widely spoken in tourist areas, hotels, and restaurants in major cities. Smaller towns and rural areas may have limited English. Learning basic phrases (Buongiorno, Grazie, Scusi, Per favore) goes a long way and earns genuine appreciation. Younger Italians generally speak some English; older generations may not. Google Translate works well offline if you download the Italian language pack." },
  ]} />

  <!-- Email Capture -->
  <div class="container-content reveal" style="padding-bottom: var(--space-6);">
    <EmailCapture
      leadMagnet="Get Our Free Italy Travel Essentials Guide"
      description="A printable PDF covering everything in this guide ‚Äî plus offline maps, emergency contacts, and a packing checklist."
      bullets={[
        'Schengen visa rules and ETIAS registration walkthrough',
        'ATM strategy and daily budget planner by travel style',
        'Printable Italian phrase card for restaurants and transport',
        'Packing checklist with summer, winter, and shoulder-season variants',
      ]}
      guideTag="pillar-practical"
    />
  </div>

  <!-- Cross-links -->
  <section class="prac-crosslinks reveal">
    <div class="container-content">
      <h3 class="prac-crosslinks-heading">Explore More</h3>
      <div class="prac-crosslinks-grid">
        <a href="/destinations/" class="prac-crosslink-card">
          <span class="prac-crosslink-icon">&#127965;</span>
          <span class="prac-crosslink-label">All Destinations</span>
          <span class="prac-crosslink-desc">Every city and region we've explored with honest reviews</span>
        </a>
        <a href="/festivals/" class="prac-crosslink-card">
          <span class="prac-crosslink-icon">&#127914;</span>
          <span class="prac-crosslink-label">Festival Calendar</span>
          <span class="prac-crosslink-desc">Italy's best festivals and events, month by month</span>
        </a>
        <a href="/cuisine/" class="prac-crosslink-card">
          <span class="prac-crosslink-icon">&#127860;</span>
          <span class="prac-crosslink-label">Food & Cuisine</span>
          <span class="prac-crosslink-desc">Regional Italian dishes with where to find the best version</span>
        </a>
        <a href="/history/" class="prac-crosslink-card">
          <span class="prac-crosslink-icon">&#127963;</span>
          <span class="prac-crosslink-label">History & Heritage</span>
          <span class="prac-crosslink-desc">From ancient Rome to the Renaissance and beyond</span>
        </a>
      </div>
    </div>
  </section>

</BaseLayout>

<!-- Scroll Reveal Observer -->
<script>
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    const revealObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add('visible');
          }
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
    );
    document.querySelectorAll('.reveal').forEach((el) => revealObserver.observe(el));
  } else {
    document.querySelectorAll('.reveal').forEach((el) => el.classList.add('visible'));
  }
</script>

<style>
  /* ================================================================
     HERO ‚Äî Practical travel gradient (no video)
     ================================================================ */
  .prac-hero {
    position: relative;
    min-height: 55vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 5rem var(--space-6) 60px;
    overflow: hidden;
  }

  .prac-hero-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .prac-hero-gradient {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.15) 40%, rgba(0,0,0,0.55) 100%);
  }

  .prac-hero-noise {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.05'/%3E%3C/svg%3E");
    pointer-events: none;
  }

  .prac-hero-content {
    position: relative;
    z-index: 3;
