---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import FAQ from '../../components/FAQ.astro';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Italian Cuisine Guide', url: '/cuisine/' },
];

const pageTitle = 'Italian Cuisine Guide — Eat Your Way Across Italy';
const pageDescription = 'A region-by-region guide to the dishes that define Italian food culture — from Milanese risotto to Sicilian arancini. Find where to eat the real thing.';

interface Dish {
  name: string;
  image?: string;
  destination: string;
  slug: string;
  price: string;
  description: string;
  tag?: string;
}

interface MenuSection {
  region: string;
  tagline: string;
  gradient: string;
  dishes: Dish[];
}

const menu: MenuSection[] = [
  {
    region: 'Northern Italy',
    tagline: 'Rich risottos, creamy polenta, and the refined flavors of the Alps to the Po Valley',
    gradient: 'linear-gradient(135deg, #BF360C 0%, #E8654A 100%)',
    dishes: [
      {
        name: 'Risotto alla Milanese',
        image: '/images/cuisine/risotto-milanese.jpg',
        destination: 'Milan',
        slug: 'milan',
        price: '12-20 EUR / $13-22 USD',
        description: 'Creamy Arborio rice infused with saffron and Parmigiano-Reggiano, finished with butter. Milan\'s golden signature dish, often served alongside ossobuco.',
        tag: 'Iconic',
      },
      {
        name: 'Pesto alla Genovese',
        image: '/images/cuisine/pesto-genovese.jpg',
        destination: 'Genoa',
        slug: 'genoa',
        price: '10-16 EUR / $11-17 USD',
        description: 'Fresh basil, pine nuts, garlic, Pecorino, and Parmigiano pounded with olive oil — the real thing bears no resemblance to jarred pesto. Best on trofie or trenette pasta.',
        tag: 'Heritage',
      },
      {
        name: 'Cotoletta alla Milanese',
        image: '/images/cuisine/cotoletta-milanese.jpg',
        destination: 'Milan',
        slug: 'milan',
        price: '15-25 EUR / $16-27 USD',
        description: 'Bone-in veal cutlet, breaded and fried in butter until golden. Milan\'s answer to the Wiener schnitzel — except Milanese insist theirs came first.',
        tag: 'Must-Try',
      },
      {
        name: 'Polenta e Osei',
        image: '/images/cuisine/polenta.jpg',
        destination: 'Bergamo',
        slug: 'bergamo',
        price: '8-14 EUR / $9-15 USD',
        description: 'Creamy cornmeal polenta served with braised meats, sausage, or wild game. A staple of the Alpine foothills — comfort food at its finest during cold months.',
      },
      {
        name: 'Bigoli in Salsa',
        image: '/images/cuisine/bigoli.jpg',
        destination: 'Venice',
        slug: 'venice',
        price: '12-18 EUR / $13-20 USD',
        description: 'Thick hand-extruded spaghetti tossed with slow-cooked onions and salt-cured sardines. Venice\'s most underrated pasta — simple, ancient, and deeply savory.',
        tag: 'Heritage',
      },
      {
        name: 'Tortellini in Brodo',
        image: '/images/cuisine/tortellini-brodo.jpg',
        destination: 'Bologna',
        slug: 'bologna',
        price: '10-16 EUR / $11-17 USD',
        description: 'Tiny hand-folded pasta parcels filled with pork and Parmigiano, served in a clear capon broth. Bologna\'s most sacred dish — locals will argue about the filling for hours.',
        tag: 'Iconic',
      },
      {
        name: 'Ragu alla Bolognese',
        image: '/images/cuisine/ragu-bolognese.jpg',
        destination: 'Bologna',
        slug: 'bologna',
        price: '11-18 EUR / $12-20 USD',
        description: 'The real Bolognese is nothing like what you know — slow-simmered beef and pork ragu served on tagliatelle, never spaghetti. Rich, meaty, and worth the 4-hour cook time.',
        tag: 'Must-Try',
      },
      {
        name: 'Frico con Polenta',
        image: '/images/cuisine/frico.jpg',
        destination: 'Udine (Friuli)',
        slug: 'udine',
        price: '8-12 EUR / $9-13 USD',
        description: 'Crispy cheese wafer made from aged Montasio, served alongside creamy polenta. Friuli\'s beloved bar snack and mountain comfort food.',
      },
    ],
  },
  {
    region: 'Central Italy',
    tagline: 'Roman pastas, Florentine steaks, and the heart of Italian cooking tradition',
    gradient: 'linear-gradient(135deg, #0D7377 0%, #4DB6AC 100%)',
    dishes: [
      {
        name: 'Cacio e Pepe',
        image: '/images/cuisine/cacio-e-pepe.jpg',
        destination: 'Rome',
        slug: 'rome',
        price: '10-16 EUR / $11-17 USD',
        description: 'Tonnarelli pasta tossed with Pecorino Romano and black pepper — three ingredients, infinite technique. Rome\'s most deceptively simple masterpiece.',
        tag: 'Iconic',
      },
      {
        name: 'Pasta alla Carbonara',
        image: '/images/cuisine/carbonara.jpg',
        destination: 'Rome',
        slug: 'rome',
        price: '11-18 EUR / $12-20 USD',
        description: 'Rigatoni or spaghetti with guanciale, egg yolks, Pecorino, and black pepper — no cream, ever. Rome\'s most debated and imitated dish. Roscioli and Da Enzo are legendary spots.',
        tag: 'Must-Try',
      },
      {
        name: 'Amatriciana',
        image: '/images/cuisine/amatriciana.jpg',
        destination: 'Rome',
        slug: 'rome',
        price: '10-16 EUR / $11-17 USD',
        description: 'Bucatini with a sauce of guanciale, San Marzano tomatoes, Pecorino Romano, and a touch of chili. Named after the town of Amatrice — one of Rome\'s holy trinity of pastas.',
      },
      {
        name: 'Bistecca alla Fiorentina',
        image: '/images/cuisine/bistecca-fiorentina.jpg',
        destination: 'Florence',
        slug: 'florence',
        price: '40-70 EUR / $44-76 USD',
        description: 'Massive T-bone from Chianina cattle, grilled over oak, served rare with nothing but salt, pepper, and olive oil. Priced by the kilo — share with a partner. Trattoria Mario is the classic spot.',
        tag: 'Iconic',
      },
      {
        name: 'Pici all\'Aglione',
        image: '/images/cuisine/pici.jpg',
        destination: 'Siena (Tuscany)',
        slug: 'tuscany',
        price: '10-15 EUR / $11-16 USD',
        description: 'Hand-rolled thick spaghetti with a garlic and tomato sauce — Tuscan comfort food from the hills south of Siena. Each strand is imperfect, rustic, and wonderful.',
        tag: 'Heritage',
      },
      {
        name: 'Porchetta',
        image: '/images/cuisine/porchetta.jpg',
        destination: 'Ariccia (near Rome)',
        slug: 'rome',
        price: '5-10 EUR / $5-11 USD per sandwich',
        description: 'Whole roasted pig stuffed with rosemary, garlic, fennel pollen, and black pepper. Sliced onto crusty bread at roadside stalls. Ariccia invented it; Romans perfected the sandwich.',
        tag: 'Must-Try',
      },
      {
        name: 'Supplì al Telefono',
        image: '/images/cuisine/suppli.jpg',
        destination: 'Rome',
        slug: 'rome',
        price: '2-4 EUR / $2-4 USD each',
        description: 'Deep-fried rice croquettes filled with mozzarella that stretches like telephone wire when you pull them apart. Rome\'s favorite street snack — eaten standing at the counter.',
      },
      {
        name: 'Ribollita',
        image: '/images/cuisine/ribollita.jpg',
        destination: 'Florence',
        slug: 'florence',
        price: '8-14 EUR / $9-15 USD',
        description: 'Tuscan bread soup with cannellini beans, cavolo nero (black kale), and vegetables — "reboiled" and thickened overnight. Peasant food elevated to restaurant status.',
        tag: 'Heritage',
      },
    ],
  },
  {
    region: 'Southern Italy',
    tagline: 'Neapolitan pizza, Amalfi seafood, and the sun-drenched flavors of the Mezzogiorno',
    gradient: 'linear-gradient(135deg, #1A2332 0%, #6A1B9A 50%, #D4A853 100%)',
    dishes: [
      {
        name: 'Pizza Margherita',
        image: '/images/cuisine/pizza-margherita.jpg',
        destination: 'Naples',
        slug: 'naples',
        price: '5-10 EUR / $5-11 USD',
        description: 'San Marzano tomatoes, fior di latte mozzarella, basil, and olive oil on a blistered, chewy crust. Naples invented pizza — L\'Antica Pizzeria da Michele has been making them since 1870.',
        tag: 'Iconic',
      },
      {
        name: 'Spaghetti alle Vongole',
        image: '/images/cuisine/vongole.jpg',
        destination: 'Naples',
        slug: 'naples',
        price: '12-20 EUR / $13-22 USD',
        description: 'Spaghetti with fresh clams, garlic, white wine, chili, and parsley — the bianco (white) version is the Neapolitan standard. Best when the clams are from the Gulf.',
        tag: 'Must-Try',
      },
      {
        name: 'Orecchiette con Cime di Rapa',
        image: '/images/cuisine/orecchiette.jpg',
        destination: 'Bari (Puglia)',
        slug: 'puglia',
        price: '8-14 EUR / $9-15 USD',
        description: 'Ear-shaped pasta with broccoli rabe, garlic, anchovies, and chili — Puglia\'s iconic dish. The nonnas of Bari Vecchia still hand-shape orecchiette on tables in the old town alleys.',
        tag: 'Heritage',
      },
      {
        name: 'Parmigiana di Melanzane',
        image: '/images/cuisine/parmigiana.jpg',
        destination: 'Naples',
        slug: 'naples',
        price: '8-14 EUR / $9-15 USD',
        description: 'Layers of fried eggplant, tomato sauce, mozzarella, and Parmigiano baked until bubbling. Naples, Sicily, and Campania all claim it — the debate is eternal.',
      },
      {
        name: 'Burrata with Tomatoes',
        image: '/images/cuisine/burrata.jpg',
        destination: 'Puglia',
        slug: 'puglia',
        price: '10-16 EUR / $11-17 USD',
        description: 'Fresh burrata — mozzarella shell filled with stracciatella cream — served with vine tomatoes and olive oil. Puglia makes the best burrata in the world, and it doesn\'t travel well. Eat it here.',
        tag: 'Must-Try',
      },
      {
        name: 'Sfogliatella',
        image: '/images/cuisine/sfogliatella.jpg',
        destination: 'Naples',
        slug: 'naples',
        price: '2-4 EUR / $2-4 USD each',
        description: 'Crispy, shell-shaped pastry filled with sweet ricotta, semolina, and candied citrus. Two styles: riccia (ridged, flaky) and frolla (smooth). Eaten warm for breakfast with an espresso.',
      },
      {
        name: 'Limoncello',
        image: '/images/cuisine/limoncello.jpg',
        destination: 'Amalfi Coast',
        slug: 'amalfi-coast',
        price: '3-6 EUR / $3-7 USD per glass',
        description: 'Ice-cold lemon liqueur made from giant Amalfi lemons — served as a digestivo after every meal along the coast. The homemade versions at family restaurants put the bottled stuff to shame.',
      },
      {
        name: 'Bombette Pugliesi',
        image: '/images/cuisine/bombette.jpg',
        destination: 'Martina Franca (Puglia)',
        slug: 'puglia',
        price: '8-14 EUR / $9-15 USD',
        description: 'Thin slices of pork or veal rolled around cheese and herbs, then grilled over charcoal. Puglia\'s street-food favorite — best at the macellerie (butcher shops) that grill to order.',
        tag: 'Heritage',
      },
    ],
  },
  {
    region: 'Islands',
    tagline: 'Sicilian street food, Sardinian roasts, and the bold flavors of the Mediterranean islands',
    gradient: 'linear-gradient(135deg, #E65100 0%, #FF9800 100%)',
    dishes: [
      {
        name: 'Arancini',
        image: '/images/cuisine/arancini.jpg',
        destination: 'Palermo (Sicily)',
        slug: 'sicily',
        price: '2-5 EUR / $2-5 USD each',
        description: 'Golden fried rice balls stuffed with ragu, mozzarella, and peas — Sicily\'s most beloved street food. Palermo calls them arancine (feminine); Catania says arancini (masculine). Don\'t pick sides.',
        tag: 'Iconic',
      },
      {
        name: 'Pasta alla Norma',
        image: '/images/cuisine/pasta-norma.jpg',
        destination: 'Catania (Sicily)',
        slug: 'sicily',
        price: '9-15 EUR / $10-16 USD',
        description: 'Rigatoni with fried eggplant, tomato sauce, and salted ricotta — named after Bellini\'s opera because it\'s "a masterpiece." Catania\'s proudest culinary creation.',
        tag: 'Must-Try',
      },
      {
        name: 'Granita con Brioche',
        image: '/images/cuisine/granita.jpg',
        destination: 'Sicily',
        slug: 'sicily',
        price: '3-6 EUR / $3-7 USD',
        description: 'Frozen granita (almond, pistachio, lemon, or mulberry) scooped into a warm brioche bun — Sicily\'s breakfast of champions. Eaten every morning from June through September.',
        tag: 'Must-Try',
      },
      {
        name: 'Cannolo Siciliano',
        image: '/images/cuisine/cannoli.jpg',
        destination: 'Palermo (Sicily)',
        slug: 'sicily',
        price: '3-5 EUR / $3-5 USD each',
        description: 'Crispy fried pastry tube filled to order with sweet sheep\'s-milk ricotta, pistachios, and candied fruit. Never pre-filled — the shell must shatter when you bite. Sicily\'s definitive dessert.',
        tag: 'Iconic',
      },
      {
        name: 'Pane Cunzato',
        image: '/images/cuisine/pane-cunzato.jpg',
        destination: 'Scopello (Sicily)',
        slug: 'sicily',
        price: '5-10 EUR / $5-11 USD',
        description: 'Crusty Sicilian bread split and loaded with tomatoes, anchovies, capers, olive oil, and oregano. The ultimate Sicilian beach sandwich — best at Bar Nettuno in Scopello.',
      },
      {
        name: 'Bottarga',
        image: '/images/cuisine/bottarga.jpg',
        destination: 'Sardinia',
        slug: 'sardinia',
        price: '14-22 EUR / $15-24 USD',
        description: 'Cured mullet roe, grated over spaghetti with olive oil and garlic — Sardinia\'s "Mediterranean caviar." Intensely briny and savory. Cabras on the west coast produces the best.',
        tag: 'Heritage',
      },
      {
        name: 'Porceddu (Roast Suckling Pig)',
        image: '/images/cuisine/porceddu.jpg',
        destination: 'Sardinia',
        slug: 'sardinia',
        price: '18-30 EUR / $20-33 USD',
