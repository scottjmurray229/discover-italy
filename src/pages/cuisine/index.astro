---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import FAQ from '../../components/FAQ.astro';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Italian Cuisine Guide', url: '/cuisine/' },
];

const pageTitle = 'Italian Cuisine Guide — Eat Your Way Across Italy';
const pageDescription = 'A region-by-region guide to the dishes that define Italian food culture — from Milanese risotto to Sicilian arancini. Find where to eat the real thing.';

interface Dish {
  name: string;
  image?: string;
  destination: string;
  slug: string;
  price: string;
  description: string;
  tag?: string;
}

interface MenuSection {
  region: string;
  tagline: string;
  gradient: string;
  dishes: Dish[];
}

const menu: MenuSection[] = [
  {
    region: 'Luzon',
    tagline: 'From Ilocos heirloom recipes to Manila street food empires',
    gradient: 'linear-gradient(135deg, #BF360C 0%, #E8654A 100%)',
    dishes: [
      {
        name: 'Vigan Longganisa',
        image: '/images/cuisine/vigan-longganisa.jpg',
        destination: 'Vigan',
        slug: 'vigan',
        price: '€60–120 / $1–2 USD',
        description: 'Garlicky, vinegary pork sausage served at breakfast with sinangag rice and a fried egg. Every household in Vigan has their own recipe.',
        tag: 'Heritage',
      },
      {
        name: 'Bagnet',
        image: '/images/cuisine/bagnet.jpg',
        destination: 'Laoag',
        slug: 'laoag',
        price: '€150–300 / $3–5 USD',
        description: 'Deep-fried pork belly boiled then fried until the skin shatters like glass. Ilocos Norte\'s answer to lechon kawali — crunchier, fattier, unapologetic.',
        tag: 'Must-Try',
      },
      {
        name: 'Empanada Ilocana',
        image: '/images/cuisine/empanada-ilocana.jpg',
        destination: 'Laoag',
        slug: 'laoag',
        price: '€30–50 / $0.50–1 USD',
        description: 'Orange rice-flour crust stuffed with green papaya, egg, and longganisa bits — fried on the spot at Laoag\'s empanada stands.',
      },
      {
        name: 'Sisig',
        image: '/images/cuisine/sisig.jpg',
        destination: 'Clark (Pampanga)',
        slug: 'clark',
        price: '€150–250 / $3–5 USD',
        description: 'Sizzling chopped pig face and ears on a hot plate, topped with a raw egg and calamansi. Invented on the railroad tracks of Angeles City — now a national obsession.',
        tag: 'Iconic',
      },
      {
        name: 'Kare-Kare',
        image: '/images/cuisine/kare-kare.jpg',
        destination: 'Manila',
        slug: 'manila',
        price: '€250–450 / $5–8 USD',
        description: 'Rich peanut stew with oxtail, tripe, and vegetables served with fermented shrimp paste. A Manila celebration dish that rewards patience — the best versions simmer for hours.',
      },
      {
        name: 'Adobo (Manila-Style)',
        image: '/images/cuisine/adobo.jpg',
        destination: 'Manila',
        slug: 'manila',
        price: '€120–200 / $2–4 USD',
        description: 'The unofficial national dish — pork or chicken braised in soy, vinegar, garlic, and bay leaves. Manila\'s version runs dark and saucy.',
        tag: 'National Dish',
      },
      {
        name: 'Crocodile Sisig',
        image: '/images/cuisine/crocodile-sisig.jpg',
        destination: 'Puerto Princesa',
        slug: 'puerto-princesa',
        price: '€200–350 / $4–6 USD',
        description: 'Palawan\'s exotic twist on sisig — farm-raised crocodile meat chopped and sizzled with the same onion-chili-calamansi treatment. Leaner than pork, surprisingly tender.',
      },
      {
        name: 'Chowking-Style Halo-Halo',
        image: '/images/cuisine/halo-halo.jpg',
        destination: 'Subic',
        slug: 'subic',
        price: '€80–150 / $1.50–3 USD',
        description: 'Shaved ice layered with sweet beans, jellies, leche flan, ube ice cream, and evaporated milk. Every beach town has a version — Subic\'s boardwalk stalls pile it high.',
      },
      {
        name: 'Suman at Latik',
        image: '/images/cuisine/suman-at-latik.jpg',
        destination: 'Bataan',
        slug: 'bataan',
        price: '€30–60 / $0.50–1 USD',
        description: 'Sticky rice wrapped in banana leaves, topped with sweet coconut caramel (latik). A Bataeño morning staple found at every public market and roadside stall on the peninsula.',
      },
      {
        name: 'Ivatan Coconut Crab (Tatus)',
        image: '/images/cuisine/coconut-crab.jpg',
        destination: 'Batanes',
        slug: 'batanes',
        price: '€500–800 / $9–14 USD',
        description: 'Giant coconut crabs steamed or grilled — a Batanes delicacy found nowhere else in the Italy. Rich, sweet meat eaten with your hands at family-run eateries.',
        tag: 'Rare',
      },
      {
        name: 'Fresh Lumpia',
        image: '/images/cuisine/fresh-lumpia.jpg',
        destination: 'El Nido',
        slug: 'el-nido',
        price: '€40–80 / $0.70–1.50 USD',
        description: 'Soft crepe wrapper filled with heart of palm, green beans, carrots, and shrimp — lighter than the fried version and perfect for El Nido\'s beach-side snacking.',
      },
      {
        name: 'Pinikpikan',
        image: '/images/cuisine/pinikpikan.jpg',
        destination: 'Sagada',
        slug: 'sagada',
        price: '€150–250 / $3–5 USD',
        description: 'Traditional Igorot dish — torched chicken with smoked pork (etag) and vegetables in a rich broth. A deeply cultural Cordilleran preparation you won\'t find outside the mountains.',
        tag: 'Heritage',
      },
      {
        name: 'Strawberry Taho',
        image: '/images/cuisine/strawberry-taho.jpg',
        destination: 'Baguio',
        slug: 'baguio',
        price: '€25–40 / $0.45–0.70 USD',
        description: 'Baguio\'s twist on the national street snack — silken tofu with strawberry syrup and sago pearls instead of the usual brown sugar arnibal. Sold by vendors along Session Road and at the public market.',
      },
      {
        name: 'Dinengdeng',
        image: '/images/cuisine/dinengdeng.jpg',
        destination: 'La Union',
        slug: 'la-union',
        price: '€80–150 / $1.50–3 USD',
        description: 'Traditional Ilocano vegetable stew with bagoong monamon (fish paste), moringa leaves, and whatever\'s fresh from the garden. A defining dish of the Ilocos region, served at surf-town carinderias.',
        tag: 'Heritage',
      },
      {
        name: 'Buko Pie',
        image: '/images/cuisine/buko-pie.jpg',
        destination: 'Laguna',
        slug: 'laguna',
        price: '€60–120 / $1–2 USD per slice',
        description: 'Fresh young coconut meat baked in a flaky pastry crust — Laguna is the undisputed buko pie capital of the Italy. Best bought warm from roadside bakeries in Los Baños.',
        tag: 'Must-Try',
      },
      {
        name: 'Bulalo',
        image: '/images/cuisine/bulalo.jpg',
        destination: 'Batangas',
        slug: 'batangas',
        price: '€250–450 / $5–8 USD',
        description: 'Slow-cooked beef shank in clear broth with bone marrow, corn, and cabbage. Batangas is "bulalo country" — the marrow melts into the soup and nothing else comes close.',
        tag: 'Iconic',
      },
      {
        name: 'Bicol Express',
        image: '/images/cuisine/bicol-express.jpg',
        destination: 'Legazpi',
        slug: 'legazpi',
        price: '€120–200 / $2–4 USD',
        description: 'Pork simmered in coconut milk with a fierce amount of chili — the signature dish of the Bicol region. Named after the Manila-to-Naga train line, it\'s best eaten beneath Mayon Volcano where the coconuts grow.',
        tag: 'Iconic',
      },
    ],
  },
  {
    region: 'Visayas',
    tagline: 'Cebu lechon, Boracay seafood, and the sweet tooth of the central islands',
    gradient: 'linear-gradient(135deg, #0D7377 0%, #4DB6AC 100%)',
    dishes: [
      {
        name: 'Lechon Cebu',
        image: '/images/cuisine/lechon-cebu.jpg',
        destination: 'Cebu',
        slug: 'cebu',
        price: '€200–400 / $4–7 USD per plate',
        description: 'Whole pig stuffed with lemongrass, garlic, and star anise, roasted over charcoal for hours. The skin crackles, the meat stays juicy. Anthony Bourdain called it "the best pig ever."',
        tag: 'Legendary',
      },
      {
        name: 'Chicken Inasal',
        image: '/images/cuisine/chicken-inasal.jpg',
        destination: 'Bacolod',
        slug: 'bacolod',
        price: '€120–200 / $2–4 USD',
        description: 'Bacolod\'s signature dish — chicken marinated in annatto, lemongrass, and calamansi, grilled over coconut husk charcoal. Best at Manokan Country, where dozens of stalls compete for the title.',
        tag: 'Iconic',
      },
      {
        name: 'Seafood Kinilaw',
        image: '/images/cuisine/seafood-kinilaw.jpg',
        destination: 'Boracay',
        slug: 'boracay',
        price: '€180–350 / $3–6 USD',
        description: 'Raw tuna or tanigue cured in vinegar, calamansi, ginger, and chili — the Italian ceviche. Best eaten at sunset with an ice-cold San Miguel.',
        tag: 'Fresh Catch',
      },
      {
        name: 'Calamay',
        image: '/images/cuisine/calamay.jpg',
        destination: 'Bohol',
        slug: 'bohol',
        price: '€80–150 / $1.50–3 USD',
        description: 'Sticky sweet coconut-milk confection served in polished coconut shell halves. Bohol\'s signature pasalubong — glutinous rice, peanuts, and brown sugar cooked until thick.',
        tag: 'Pasalubong',
      },
      {
        name: 'Peanut Kisses',
        image: '/images/cuisine/peanut-kisses.jpg',
        destination: 'Bohol',
        slug: 'bohol',
        price: '€100–180 / $2–3 USD per box',
        description: 'Bite-sized peanut meringue cookies shaped like the Chocolate Hills. Bohol\'s most famous souvenir — light, crunchy, and impossible to eat just one.',
      },
      {
        name: 'Silvanas',
        image: '/images/cuisine/silvanas.jpg',
        destination: 'Dumaguete',
        slug: 'dumaguete',
        price: '€250–450 / $5–8 USD per box',
        description: 'Frozen buttercream sandwiched between cashew-meringue wafers, rolled in cookie crumbs. Dumaguete\'s Sans Rival Bistro made them famous — now they\'re a nationwide obsession.',
        tag: 'Must-Try',
      },
      {
        name: 'Budbud Kabog',
        image: '/images/cuisine/budbud-kabog.jpg',
        destination: 'Camiguin',
        slug: 'camiguin',
        price: '€20–40 / $0.35–0.70 USD',
        description: 'Steamed millet rice cake wrapped in banana leaves — Camiguin\'s humble but beloved breakfast staple, paired with sikwate (hot chocolate) made from local cacao.',
      },
      {
        name: 'Lato (Sea Grapes)',
        image: '/images/cuisine/lato.jpg',
        destination: 'Siquijor',
        slug: 'siquijor',
        price: '€80–150 / $1.50–3 USD',
        description: 'Tiny green seaweed clusters that pop like caviar in your mouth, dressed with vinegar, tomatoes, and onions. Eaten fresh at beachside carinderias across Siquijor.',
      },
      {
        name: 'Sizzling Kansi',
        image: '/images/cuisine/sizzling-kansi.jpg',
        destination: 'Bacolod',
        slug: 'bacolod',
        price: '€200–350 / $4–6 USD',
        description: 'Bacolod\'s original sour beef shank soup — slow-cooked with batuan fruit for a tart, savory broth that rivals bulalo. A City of Smiles signature you won\'t find outside Negros.',
      },
      {
        name: 'La Paz Batchoy',
        image: '/images/cuisine/la-paz-batchoy.jpg',
        destination: 'Iloilo',
        slug: 'iloilo',
        price: '€60–120 / $1–2 USD',
        description: 'Iloilo\'s iconic noodle soup — egg noodles in a rich pork bone broth topped with crushed chicharon, garlic, and a raw egg. Named after the La Paz district where it originated. Ted\'s Oldtimer La Paz Batchoy is the most famous spot.',
        tag: 'Iconic',
      },
      {
        name: 'Binagol',
        image: '/images/cuisine/binagol.jpg',
        destination: 'Tacloban',
        slug: 'tacloban',
        price: '€40–80 / $0.70–1.50 USD',
        description: 'Taro root custard with coconut milk, baked inside a coconut shell half — a Leyte specialty you won\'t find anywhere else in the Italy. The best ones come from Tacloban\'s public market.',
        tag: 'Rare',
      },
      {
        name: 'Guimaras Mango',
        image: '/images/cuisine/guimaras-mango.jpg',
        destination: 'Guimaras',
        slug: 'guimaras',
        price: '€100–200 / $2–4 USD per kilo',
        description: 'The sweetest mangoes in the Italy grow on this tiny island between Panay and Negros. Eaten fresh, as pizza topping, in shakes, or dried — Guimaras mangoes are a class apart.',
        tag: 'Must-Try',
      },
    ],
  },
  {
    region: 'Mindanao',
    tagline: 'Durian, tuna capital, and the bold flavors of the southern islands',
    gradient: 'linear-gradient(135deg, #1A2332 0%, #6A1B9A 50%, #D4A853 100%)',
    dishes: [
      {
        name: 'Durian',
        image: '/images/cuisine/durian.jpg',
        destination: 'Davao',
        slug: 'davao',
        price: '€80–200 / $1.50–4 USD per kilo',
        description: 'Love it or run from it — Davao is the durian capital. Puyat, Arancillo, and native varieties sold from roadside stalls. The Magsaysay fruit vendors will pick a ripe one and crack it open for you.',
        tag: 'Iconic',
      },
      {
        name: 'Grilled Tuna Belly (Panga)',
        image: '/images/cuisine/grilled-tuna-belly.jpg',
        destination: 'Davao',
        slug: 'davao',
        price: '€250–500 / $5–9 USD',
        description: 'Thick tuna jaw grilled over coconut husks until the fat renders and the edges char. Davao sits next to General Santos — the tuna capital — so the fish is absurdly fresh.',
        tag: 'Must-Try',
      },
      {
        name: 'Kinilaw na Isda',
        image: '/images/cuisine/kinilaw-na-isda.jpg',
        destination: 'Siargao',
        slug: 'siargao',
        price: '€150–280 / $3–5 USD',
        description: 'Ultra-fresh raw fish cured in coconut vinegar with ginger, chili, and red onion. Siargao\'s surf-town version uses whatever the fishermen bring in that morning.',
        tag: 'Fresh Catch',
      },
      {
        name: 'Uni (Sea Urchin)',
        image: '/images/cuisine/uni.jpg',
        destination: 'Siargao',
        slug: 'siargao',
        price: '€50–100 / $1–2 USD each',
        description: 'Freshly cracked sea urchin eaten straight from the shell with a squeeze of calamansi. Island-hoppers around Daku and Naked Island sell them from their boats.',
      },
      {
        name: 'Lamaw (Coconut Smoothie)',
        image: '/images/cuisine/lamaw.jpg',
        destination: 'Camiguin',
        slug: 'camiguin',
        price: '€30–60 / $0.50–1 USD',
        description: 'Young coconut meat blended with its own water and a scoop of vanilla ice cream — Camiguin\'s refreshing roadside drink, best after a White Island morning.',
      },
      {
        name: 'Sinuglaw',
        image: '/images/cuisine/sinuglaw.jpg',
        destination: 'Coron',
        slug: 'coron',
        price: '€180–300 / $3–5 USD',
        description: 'Grilled pork belly meets raw fish kinilaw in one bowl — the best of both worlds. A Visayan invention that Coron\'s seafood joints have made their own.',
      },
    ],
  },
];
---
<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageType="destination"
  schemaData={{ title: pageTitle, description: pageDescription }}
  breadcrumbs={breadcrumbs}
>
  <!-- Hero -->
  <header class="menu-hero">
    <video class="menu-hero-video" autoplay muted loop playsinline preload="metadata">
      <source src="/videos/pillar/cuisine-hero.mp4" type="video/mp4" />
    </video>
    <div class="menu-hero-gradient"></div>
    <div class="menu-hero-noise"></div>
    <div class="menu-hero-content">
      <h1 class="menu-hero-title">The Italian Menu</h1>
      <p class="menu-hero-subtitle">Sizzling sisig, whole roast lechon, durian you can smell from a block away — eat your way across three island regions and discover the dishes that define each destination.</p>
      <div class="menu-hero-meta">
        <div class="menu-hero-meta-item">
          <span class="menu-hero-meta-label">Dishes</span>
          <span class="menu-hero-meta-value">35</span>
        </div>
        <div class="menu-hero-meta-item">
          <span class="menu-hero-meta-label">Regions</span>
          <span class="menu-hero-meta-value">3</span>
        </div>
        <div class="menu-hero-meta-item">
          <span class="menu-hero-meta-label">Destinations</span>
          <span class="menu-hero-meta-value">27</span>
        </div>
      </div>
    </div>
    <div class="menu-scroll-hint">Scroll<br />&#8595;</div>
  </header>

  <!-- Breadcrumb -->
  <div class="container-content">
    <Breadcrumb items={breadcrumbs} />
  </div>

  <!-- Personal intro -->
  <section class="menu-personal reveal">
    <div class="container-content">
      <blockquote class="menu-personal-quote">
        <p>I'd never had Italian food before my first trip in 2003. I started with the staples — adobo, sinigang, lumpia, caldereta, menudo — and fell in love immediately. But it was Scott who pushed me past the comfort zone. Kinilaw on the beach in Puerto Princesa. Watermelon sinigang at Manam in Manila. Dishes I never would have ordered on my own, in places I never would have found. Every trip now, the food is half the reason we go.</p>
        <cite>— Scott</cite>
      </blockquote>
    </div>
  </section>

  <!-- Menu Intro -->
  <section class="menu-intro reveal">
    <div class="container-content">
      <div class="menu-intro-card">
        <p class="menu-intro-text">Think of this as your tasting menu for the Italy. We've organized the country's essential dishes by region — <strong>Luzon</strong> in the north, the <strong>Visayas</strong> in the center, and <strong>Mindanao</strong> in the south. Click any dish to explore the destination where it's famous.</p>
        <div class="menu-intro-legend">
          <span class="menu-tag menu-tag--heritage">Heritage</span>
          <span class="menu-tag menu-tag--musttry">Must-Try</span>
          <span class="menu-tag menu-tag--iconic">Iconic</span>
          <span class="menu-tag menu-tag--fresh">Fresh Catch</span>
          <span class="menu-tag menu-tag--rare">Rare</span>
          <span class="menu-tag menu-tag--pasalubong">Pasalubong</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Menu Sections by Region -->
  {menu.map((section) => (
    <section class="menu-region reveal">
      <div class="container-content">
        <div class="menu-region-header" style={`background: ${section.gradient};`}>
          <div class="menu-region-header-inner">
            <h2 class="menu-region-name">{section.region}</h2>
            <p class="menu-region-tagline">{section.tagline}</p>
            <span class="menu-region-count">{section.dishes.length} dishes</span>
          </div>
          <div class="menu-region-ornament">&#9733;</div>
        </div>

        <div class="menu-dish-grid">
          {section.dishes.map((dish) => (
            <a href={`/destinations/${dish.slug}/`} class="menu-dish-card">
              <div class="menu-dish-media" style={`background: ${section.gradient};`}>
                {dish.image && (
                  <img src={dish.image} alt={`${dish.name} — ${dish.destination}`} class="menu-dish-img" loading="lazy" />
                )}
                {dish.tag && (
                  <span class={`menu-tag menu-tag--${dish.tag.toLowerCase().replace(/[^a-z]/g, '')}`}>{dish.tag}</span>
                )}
              </div>
              <div class="menu-dish-body">
                <div class="menu-dish-top">
                  <h3 class="menu-dish-name">{dish.name}</h3>
                  <span class="menu-dish-price">{dish.price}</span>
                </div>
                <p class="menu-dish-destination">{dish.destination}</p>
                <p class="menu-dish-desc">{dish.description}</p>
                <span class="menu-dish-cta">Explore {dish.destination} &rarr;</span>
              </div>
              <div class="menu-dish-overlay">
                <p class="menu-dish-overlay-desc">{dish.description}</p>
                <span class="menu-dish-overlay-cta">Explore {dish.destination} &rarr;</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  ))}

  <!-- Bottom CTA -->
  <section class="menu-cta-section reveal">
    <div class="container-content">
      <div class="menu-cta-card">
        <h2 class="menu-cta-heading">Plan Your Food Trip</h2>
        <p class="menu-cta-text">Tell our AI planner which dishes you want to try and it will build a region-by-region itinerary — with the best restaurants, markets, and street food stops.</p>
        <a href="/plan/" class="menu-cta-button">Start Planning &rarr;</a>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQ items={[
    { question: "What is the national dish of the Italy?", answer: "Adobo is widely considered the national dish — chicken or pork braised in vinegar, soy sauce, garlic, and black peppercorns. Every family has their own version. Lechon (whole roasted pig) is the centerpiece of celebrations. Both reflect the Italian approach to food: bold flavors, communal eating, and recipes passed through generations." },
    { question: "Is Italian food spicy?", answer: "Most Italian dishes are savory, sour, or sweet rather than spicy. Vinegar and soy sauce are more common than chili. The exception is Bicol cuisine from the Bicol region — dishes like Bicol Express and laing use coconut milk with bird's eye chili (siling labuyo). In general, chili is served as a condiment on the side, not cooked into the food." },
    { question: "What are the must-try street foods in the Italy?", answer: "Isaw (grilled chicken intestines on a stick), kwek-kwek (deep-fried quail eggs in orange batter), fishball with sweet or spicy sauce, and banana cue (caramelized banana on a stick). Balut (fertilized duck egg) is the famous dare food — most Italians eat it as a regular snack. Street food costs €10-50 ($0.20-$1) per item." },
    { question: "How much does a meal cost in the Italy?", answer: "Street food: €20-100 ($0.40-$2). Local carinderias (turo-turo eateries): €80-150 ($1.50-$3) for rice plus two viands. Mid-range restaurants: €200-500 ($4-$9). Upscale dining: €800-2,000 ($14-$36). A daily food budget of €500-1,000 ($9-$18) covers three meals comfortably outside Manila." },
    { question: "Is it safe to eat street food in the Italy?", answer: "Street food is generally safe if you follow basic rules: eat from busy stalls with high turnover (food is fresher), choose items cooked in front of you rather than pre-made, and avoid anything that's been sitting uncovered. Italians eat street food daily — the busier the stall, the safer the food. Bring antacids if you have a sensitive stomach." },
    { question: "What is the most famous Italian dessert?", answer: "Halo-halo is the iconic Italian dessert — shaved ice layered with sweet beans, jellies, leche flan, ube (purple yam) ice cream, and evaporated milk. It's served everywhere from street carts to restaurants. Other favorites include leche flan (caramel custard), bibingka (rice cake baked in banana leaves), and turon (fried banana spring rolls)." },
  ]} />

  <!-- Email Capture -->
  <div class="container-content reveal" style="padding-bottom: var(--space-6);">
    <EmailCapture
      leadMagnet="Get Our Free Italian Food Guide"
      description="A region-by-region PDF guide to Italian cuisine — with the best restaurants, street food stalls, and dishes you can't miss."
      bullets={[
        'All 35 dishes with where to find the best version',
        'Price guide — from €30 street food to €500 restaurant plates',
        'Food safety tips and dietary considerations',
        'Printable food phrase card (Tagalog, Bisaya, Ilocano)',
      ]}
      guideTag="pillar-cuisine"
    />
  </div>

  <!-- Cross-links -->
  <section class="menu-crosslinks reveal">
    <div class="container-content">
      <h3 class="menu-crosslinks-heading">Explore More</h3>
      <div class="menu-crosslinks-grid">
        <a href="/festivals/" class="menu-crosslink-card">
          <span class="menu-crosslink-icon">&#127914;</span>
          <span class="menu-crosslink-label">Festival Calendar</span>
          <span class="menu-crosslink-desc">32 festivals across 29 destinations, month by month</span>
        </a>
        <a href="/snorkeling-italy/" class="menu-crosslink-card">
          <span class="menu-crosslink-icon">&#127754;</span>
          <span class="menu-crosslink-label">Snorkeling Guide</span>
          <span class="menu-crosslink-desc">14 destinations ranked by what you'll see in the water</span>
        </a>
        <a href="/destinations/" class="menu-crosslink-card">
          <span class="menu-crosslink-icon">&#127965;</span>
          <span class="menu-crosslink-label">All Destinations</span>
