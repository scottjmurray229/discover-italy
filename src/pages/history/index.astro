---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import FAQ from '../../components/FAQ.astro';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'History & Heritage', url: '/history/' },
];

const pageTitle = 'Italian History — From Ancient Rome to the Renaissance and Beyond';
const pageDescription = 'Trace 3,000 years of Italian history through the places where it happened — from the Roman Forum to Renaissance Florence to modern unification.';

interface TimelineEvent {
  date: string;
  year: number;
  title: string;
  location: string;
  slug?: string | string[];
  description: string;
  whatToSee?: string;
  side: 'left' | 'right';
  era: 'ancient' | 'medieval' | 'renaissance' | 'modern';
}

const timeline: TimelineEvent[] = [
  {
    date: '753 BC',
    year: -753,
    title: 'Founding of Rome',
    location: 'Rome',
    slug: 'rome',
    description: 'According to legend, Romulus founded Rome on the Palatine Hill. What began as a small settlement of shepherds and farmers would grow into the greatest empire the ancient world had ever seen, shaping law, architecture, language, and governance for millennia.',
    whatToSee: 'The Palatine Hill overlooks the Roman Forum and is believed to be the site of Rome\'s founding. Excavations reveal foundations dating to the 8th century BC.',
    side: 'left',
    era: 'ancient',
  },
  {
    date: '27 BC – 476 AD',
    year: 0,
    title: 'The Roman Empire',
    location: 'Rome & throughout Italy',
    slug: 'rome',
    description: 'At its peak, the Roman Empire stretched from Britain to Mesopotamia, governing 70 million people. Rome\'s innovations — aqueducts, roads, concrete, republican government, codified law — became the foundation of Western civilization. The Colosseum, Pantheon, and Forum still stand as monuments to imperial ambition.',
    whatToSee: 'The Colosseum, Roman Forum, Pantheon, and Appian Way in Rome. Pompeii and Herculaneum near Naples. The Arena in Verona. Hadrian\'s Villa in Tivoli.',
    side: 'right',
    era: 'ancient',
  },
  {
    date: '79 AD',
    year: 79,
    title: 'Eruption of Vesuvius — Pompeii Buried',
    location: 'Pompeii & Herculaneum',
    slug: 'naples',
    description: 'Mount Vesuvius erupted catastrophically, burying Pompeii and Herculaneum under meters of volcanic ash and pumice. The cities were preserved in astonishing detail — frozen in time with their frescoes, shops, temples, and even the casts of the people who perished.',
    whatToSee: 'Pompeii is one of the world\'s most remarkable archaeological sites — a complete Roman city preserved under ash. Herculaneum is smaller but better preserved, with intact wooden structures and mosaics.',
    side: 'left',
    era: 'ancient',
  },
  {
    date: '476 AD',
    year: 476,
    title: 'Fall of the Western Roman Empire',
    location: 'Ravenna',
    slug: 'ravenna',
    description: 'The last Western Roman Emperor, Romulus Augustulus, was deposed by the Germanic chieftain Odoacer. The fall marked the end of antiquity and the beginning of the Middle Ages. Ravenna, not Rome, had served as the western capital since 402 AD.',
    whatToSee: 'Ravenna\'s Byzantine mosaics in the Basilica of San Vitale and Mausoleum of Galla Placidia are UNESCO-listed masterpieces — the finest surviving examples of early Christian art.',
    side: 'right',
    era: 'ancient',
  },
  {
    date: '11th–13th Century',
    year: 1100,
    title: 'Rise of the Maritime Republics',
    location: 'Venice, Genoa, Pisa, Amalfi',
    slug: 'venice',
    description: 'Venice, Genoa, Pisa, and Amalfi built powerful naval and trading empires across the Mediterranean. Venice\'s influence stretched to Constantinople and beyond, funding the construction of St. Mark\'s Basilica and the Doge\'s Palace with eastern wealth.',
    whatToSee: 'Venice\'s Piazza San Marco, the Doge\'s Palace, and the Arsenal shipyard. Genoa\'s Via Garibaldi palaces. Pisa\'s Piazza dei Miracoli. Amalfi\'s cathedral and maritime museum.',
    side: 'left',
    era: 'medieval',
  },
  {
    date: '13th–14th Century',
    year: 1300,
    title: 'Dante, Giotto & the Dawn of the Renaissance',
    location: 'Florence',
    slug: 'florence',
    description: 'Dante Alighieri wrote the Divine Comedy in Florentine dialect, creating the foundation of modern Italian language. Giotto revolutionized painting with naturalistic frescoes in Assisi and Padua. Florence began its transformation from a prosperous wool town into the cradle of the Renaissance.',
    whatToSee: 'Giotto\'s Bell Tower and the Basilica of Santa Croce (where Dante\'s cenotaph stands) in Florence. The Scrovegni Chapel in Padua contains Giotto\'s greatest frescoes.',
    side: 'right',
    era: 'medieval',
  },
  {
    date: '15th Century',
    year: 1450,
    title: 'The Florentine Renaissance',
    location: 'Florence',
    slug: 'florence',
    description: 'Under the patronage of the Medici family, Florence became the epicenter of a cultural revolution. Brunelleschi engineered the cathedral dome, Botticelli painted The Birth of Venus, and Leonardo da Vinci began his career. The ideas born here — humanism, perspective, empirical observation — reshaped the world.',
    whatToSee: 'The Uffizi Gallery, Brunelleschi\'s Dome, the Medici Chapels, and the Bargello in Florence. Virtually every street corner holds a masterpiece.',
    side: 'left',
    era: 'renaissance',
  },
  {
    date: '1508–1512',
    year: 1510,
    title: 'Michelangelo Paints the Sistine Chapel',
    location: 'Vatican City (Rome)',
    slug: 'rome',
    description: 'Commissioned by Pope Julius II, Michelangelo spent four years on scaffolding painting the Sistine Chapel ceiling — 500 square meters of frescoes depicting the Creation of Adam and scenes from Genesis. He later added The Last Judgment on the altar wall (1536-1541).',
    whatToSee: 'The Sistine Chapel in Vatican City. Book early or visit late afternoon to avoid the worst crowds. No photography allowed, but the experience of standing beneath the ceiling is unforgettable.',
    side: 'right',
    era: 'renaissance',
  },
  {
    date: '16th Century',
    year: 1550,
    title: 'The High Renaissance & Venice\'s Golden Age',
    location: 'Venice & Rome',
    slug: ['venice', 'rome'],
    description: 'Titian, Tintoretto, and Veronese made Venice a rival to Florence and Rome in artistic splendor. Raphael painted the School of Athens in the Vatican. St. Peter\'s Basilica rose under Michelangelo\'s direction. Italy was the undisputed cultural capital of Europe.',
    whatToSee: 'The Gallerie dell\'Accademia and Scuola Grande di San Rocco in Venice. The Raphael Rooms and St. Peter\'s Basilica in Rome.',
    side: 'left',
    era: 'renaissance',
  },
  {
    date: '17th–18th Century',
    year: 1700,
    title: 'The Baroque Era & the Grand Tour',
    location: 'Rome, Naples & throughout Italy',
    slug: 'rome',
    description: 'Bernini\'s fountains and Caravaggio\'s dramatic paintings defined the Baroque. Rome became a must-visit destination for wealthy young Europeans on the "Grand Tour" — the 18th-century equivalent of a gap year. The tradition established Italy as the world\'s foremost cultural destination.',
    whatToSee: 'Bernini\'s Fountain of the Four Rivers in Piazza Navona, the Trevi Fountain, and the Ecstasy of Saint Teresa. Caravaggio\'s works in San Luigi dei Francesi and the Borghese Gallery.',
    side: 'right',
    era: 'renaissance',
  },
  {
    date: '1861',
    year: 1861,
    title: 'Italian Unification (Risorgimento)',
    location: 'Turin, then Florence, then Rome',
    slug: 'rome',
    description: 'After centuries of fragmentation, Giuseppe Garibaldi, Cavour, and King Victor Emmanuel II unified the Italian peninsula into a single nation. Turin was the first capital (1861), then Florence (1865), and finally Rome (1871) after the Papal States fell.',
    whatToSee: 'The Altare della Patria (Vittoriano) in Rome\'s Piazza Venezia celebrates unification. The Museum of the Risorgimento in Turin. Garibaldi monuments are in virtually every Italian city.',
    side: 'left',
    era: 'modern',
  },
  {
    date: '1943–1945',
    year: 1944,
    title: 'World War II — Liberation of Italy',
    location: 'Sicily, Anzio, Monte Cassino, Rome',
    slug: 'rome',
    description: 'Allied forces invaded Sicily in 1943 and fought their way up the Italian peninsula. The Battle of Monte Cassino and the Anzio landings were among the bloodiest campaigns in Europe. Rome was liberated on June 4, 1944 — two days before D-Day.',
    whatToSee: 'The Monte Cassino War Cemetery and rebuilt abbey. The Anzio American Cemetery. The Fosse Ardeatine memorial in Rome, where 335 civilians were massacred by Nazis.',
    side: 'right',
    era: 'modern',
  },
  {
    date: '1946–Present',
    year: 1960,
    title: 'The Italian Republic & La Dolce Vita',
    location: 'Throughout Italy',
    description: 'Italy became a republic in 1946. The postwar economic miracle transformed a rural nation into one of the world\'s largest economies. Fellini\'s La Dolce Vita (1960) captured Rome\'s glamour. Italy\'s design, fashion, and automotive industries — Ferrari, Gucci, Armani — became global symbols of style.',
    side: 'left',
    era: 'modern',
  },
  {
    date: 'Present Day',
    year: 2026,
    title: 'The Heritage That Remains',
    location: 'All Destinations',
    description: 'From the Roman Forum to Renaissance Florence, from Pompeii\'s frozen city to Venice\'s floating palaces — 3,000 years of Italian history is visible, walkable, and still deeply felt. Italy has more UNESCO World Heritage Sites than any other country on earth. The past isn\'t past here — it\'s the ground you walk on.',
    side: 'right',
    era: 'modern',
  },
];

const eraLabels: Record<string, string> = {
  ancient: 'Ancient Rome — 753 BC – 476 AD',
  medieval: 'Medieval Italy — 11th–14th Century',
  renaissance: 'Renaissance & Baroque — 15th–18th Century',
  modern: 'Modern Italy — 1861–Present',
};

const eraGradients: Record<string, string> = {
  ancient: 'linear-gradient(135deg, #B71C1C 0%, #D32F2F 100%)',
  medieval: 'linear-gradient(135deg, #4A5568 0%, #2D3748 100%)',
  renaissance: 'linear-gradient(135deg, #1B5E20 0%, #388E3C 100%)',
  modern: 'linear-gradient(135deg, #0D7377 0%, #4DB6AC 100%)',
};

const eraColors: Record<string, string> = {
  ancient: '#D32F2F',
  medieval: '#718096',
  renaissance: '#388E3C',
  modern: '#0D7377',
};

// Geo coordinates for map markers
const geoLookup: Record<string, { lat: number; lng: number }> = {
  rome: { lat: 41.9028, lng: 12.4964 },
  naples: { lat: 40.8518, lng: 14.2681 },
  ravenna: { lat: 44.4184, lng: 12.2035 },
  venice: { lat: 45.4408, lng: 12.3155 },
  florence: { lat: 43.7696, lng: 11.2558 },
  turin: { lat: 45.0703, lng: 7.6869 },
  sicily: { lat: 37.5999, lng: 14.0154 },
  verona: { lat: 45.4384, lng: 10.9917 },
  genoa: { lat: 44.4056, lng: 8.9463 },
  pisa: { lat: 43.7228, lng: 10.4017 },
  amalfi: { lat: 40.6340, lng: 14.6027 },
};

// Build map markers from timeline events that have slugs
const historyMapMarkers = timeline
  .filter(e => e.slug)
  .map(e => {
    const slugs = Array.isArray(e.slug) ? e.slug : [e.slug!];
    const primarySlug = slugs[0];
    const geo = geoLookup[primarySlug];
    if (!geo) return null;
    return {
      lat: geo.lat,
      lng: geo.lng,
      title: e.title,
      date: e.date,
      location: e.location,
      era: e.era,
      color: eraColors[e.era],
      url: `/destinations/${primarySlug}/`,
    };
  })
  .filter(Boolean);

// History card videos — 7 clips cycled across events
const historyCardVideos = Array.from({ length: 7 }, (_, i) => `/videos/pillar/history-card-${i + 1}.mp4`);

---
<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageType="destination"
  schemaData={{ title: pageTitle, description: pageDescription }}
  breadcrumbs={breadcrumbs}
>
  <!-- Hero -->
  <header class="ww2-hero">
    <video class="ww2-hero-video" autoplay muted loop playsinline preload="metadata">
      <source src="/videos/pillar/history-hero.mp4" type="video/mp4" />
    </video>
    <div class="ww2-hero-gradient"></div>
    <div class="ww2-hero-noise"></div>
    <div class="ww2-hero-content">
      <h1 class="ww2-hero-title">3,000 Years of Italian History</h1>
      <p class="ww2-hero-subtitle">From the founding of Rome to the Renaissance and beyond — trace Italy's extraordinary story through the places where history still stands.</p>
      <div class="ww2-hero-meta">
        <div class="ww2-hero-meta-item">
          <span class="ww2-hero-meta-label">Events</span>
          <span class="ww2-hero-meta-value">14</span>
        </div>
        <div class="ww2-hero-meta-item">
          <span class="ww2-hero-meta-label">Destinations</span>
          <span class="ww2-hero-meta-value">10+</span>
        </div>
        <div class="ww2-hero-meta-item">
          <span class="ww2-hero-meta-label">Timeline</span>
          <span class="ww2-hero-meta-value">753 BC–Today</span>
        </div>
      </div>
    </div>
    <div class="ww2-scroll-hint">Scroll<br />&#8595;</div>
  </header>

  <!-- Breadcrumb -->
  <div class="container-content">
    <Breadcrumb items={breadcrumbs} />
  </div>

  <!-- Personal intro -->
  <section class="ww2-personal reveal">
    <div class="container-content">
      <blockquote class="ww2-personal-quote">
        <p>I used to think of history as something locked behind glass in museums. Then we walked through the Roman Forum for the first time and I felt it — the weight of 2,000 years underfoot. Standing inside the Pantheon, staring up at Brunelleschi's dome, wandering Pompeii's streets frozen in ash — Italy doesn't just preserve its history, it lives in it. Every trip we've taken, we build the itinerary around the places where these stories happened. We hope you will too.</p>
        <cite>— Scott</cite>
      </blockquote>
    </div>
  </section>

  <!-- View Toggle -->
  <div class="container-content" style="padding-top: var(--space-2); padding-bottom: var(--space-4);">
    <div class="ww2-view-toggle">
      <button class="ww2-toggle-btn active" id="ww2BtnTimeline">Timeline</button>
      <button class="ww2-toggle-btn" id="ww2BtnMap">Map</button>
    </div>
  </div>

  <!-- Timeline -->
  <div id="ww2TimelineView">
  <section class="ww2-timeline-section">
    <div class="container-content">
      <h2 class="ww2-timeline-heading reveal">A Story Written in Stone</h2>
      <p class="ww2-timeline-sub reveal">From a hilltop village of shepherds to the greatest empire of antiquity, from the Renaissance that remade the world to a modern republic that defines style and culture — Italy's 3,000-year story is still visible, walkable, and deeply felt.</p>

      <div class="ww2-timeline">
        <div class="ww2-timeline-line" aria-hidden="true"></div>

        {(() => {
          let lastEra = '';
          return timeline.map((event, idx) => {
            const showEra = event.era !== lastEra;
            lastEra = event.era;
            const slugs = Array.isArray(event.slug) ? event.slug : event.slug ? [event.slug] : [];
            const primarySlug = slugs[0];
            const cardVideo = historyCardVideos[idx % historyCardVideos.length];
            return (
              <>
                {showEra && (
                  <div class="ww2-era-marker reveal">
                    <div class="ww2-era-pill" style={`background: ${eraGradients[event.era]};`}>
                      {eraLabels[event.era]}
                    </div>
                  </div>
                )}
                <div class={`ww2-event ww2-event--${event.side} reveal`}>
                  <div class="ww2-event-dot" style={`background: ${eraGradients[event.era]};`}></div>
                  {primarySlug && slugs.length === 1 ? (
                    <a href={`/destinations/${primarySlug}/`} class="ww2-event-card">
                      <div class="ww2-event-media" style={`background: ${eraGradients[event.era]};`}>
                        <video class="ww2-event-video" muted loop playsinline preload="none" data-src={cardVideo}></video>
                        <span class="ww2-event-date-badge">{event.date}</span>
                      </div>
                      <div class="ww2-event-body">
                        <h3 class="ww2-event-title">{event.title}</h3>
                        <p class="ww2-event-location">{event.location}</p>
                        <p class="ww2-event-desc">{event.description}</p>
                        {event.whatToSee && (
                          <div class="ww2-event-see">
                            <span class="ww2-event-see-label">What to see today:</span>
                            <p class="ww2-event-see-text">{event.whatToSee}</p>
                          </div>
                        )}
                        <span class="ww2-event-cta">Explore {event.location.split(',')[0]} &rarr;</span>
                      </div>
                      <div class="ww2-event-overlay">
                        <p class="ww2-event-overlay-text">{event.description}</p>
                        {event.whatToSee && (
                          <div class="ww2-event-overlay-see">
                            <span class="ww2-event-overlay-see-label">What to see today:</span>
                            <p>{event.whatToSee}</p>
                          </div>
                        )}
                        <span class="ww2-event-overlay-cta">Explore {event.location.split(',')[0]} &rarr;</span>
                      </div>
                    </a>
                  ) : primarySlug ? (
                    <div class="ww2-event-card ww2-event-card--multi">
                      <div class="ww2-event-media" style={`background: ${eraGradients[event.era]};`}>
                        <video class="ww2-event-video" muted loop playsinline preload="none" data-src={cardVideo}></video>
                        <span class="ww2-event-date-badge">{event.date}</span>
                      </div>
                      <div class="ww2-event-body">
                        <h3 class="ww2-event-title">{event.title}</h3>
                        <p class="ww2-event-location">{event.location}</p>
                        <p class="ww2-event-desc">{event.description}</p>
                        {event.whatToSee && (
                          <div class="ww2-event-see">
                            <span class="ww2-event-see-label">What to see today:</span>
                            <p class="ww2-event-see-text">{event.whatToSee}</p>
                          </div>
                        )}
                        <div class="ww2-event-cta-group">
                          {slugs.map((s) => (
                            <a href={`/destinations/${s}/`} class="ww2-event-cta ww2-event-cta-link">Explore {s.charAt(0).toUpperCase() + s.slice(1)} &rarr;</a>
                          ))}
                        </div>
                      </div>
                    </div>
                  ) : (
                    <div class="ww2-event-card ww2-event-card--nolink">
                      <div class="ww2-event-media" style={`background: ${eraGradients[event.era]};`}>
                        <video class="ww2-event-video" muted loop playsinline preload="none" data-src={cardVideo}></video>
                        <span class="ww2-event-date-badge">{event.date}</span>
                      </div>
                      <div class="ww2-event-body">
                        <h3 class="ww2-event-title">{event.title}</h3>
                        <p class="ww2-event-location">{event.location}</p>
                        <p class="ww2-event-desc">{event.description}</p>
                      </div>
                    </div>
                  )}
                </div>
              </>
            );
          });
        })()}
      </div>
    </div>
  </section>

  </div><!-- /ww2TimelineView -->

  <!-- Map View (hidden by default) -->
  <div id="ww2MapView" style="display:none;">
    <section style="padding: var(--space-4) 0 var(--space-8);">
      <div class="container-content">
        <div class="ww2-map-container" id="ww2MapContainer">
          <div class="ww2-map-tooltip" id="ww2MapTooltip">
            <div class="ww2-map-tooltip-title" id="ww2TooltipTitle"></div>
            <div class="ww2-map-tooltip-date" id="ww2TooltipDate"></div>
            <div class="ww2-map-tooltip-location" id="ww2TooltipLocation"></div>
          </div>
          <div id="ww2LeafletMap"></div>
          <div class="ww2-map-legend">
            <div class="ww2-map-legend-item"><div class="ww2-map-legend-dot" style="background:#D32F2F;"></div>Ancient</div>
            <div class="ww2-map-legend-item"><div class="ww2-map-legend-dot" style="background:#718096;"></div>Medieval</div>
            <div class="ww2-map-legend-item"><div class="ww2-map-legend-dot" style="background:#388E3C;"></div>Renaissance</div>
            <div class="ww2-map-legend-item"><div class="ww2-map-legend-dot" style="background:#0D7377;"></div>Modern</div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Bottom CTA -->
  <section class="ww2-cta-section reveal">
    <div class="container-content">
      <div class="ww2-cta-card">
        <h2 class="ww2-cta-heading">Plan a Heritage Trip</h2>
        <p class="ww2-cta-text">Tell our AI planner you're interested in history and it will build a chronological itinerary — the Roman Forum, Renaissance Florence, Pompeii, and more.</p>
        <a href="/plan/" class="ww2-cta-button">Start Planning &rarr;</a>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQ items={[
    { question: "What are the most important periods of Italian history?", answer: "Italy's history spans four major eras: Ancient Rome (753 BC - 476 AD), including the Roman Republic and Empire; the Medieval period with powerful maritime republics and city-states; the Renaissance (14th-17th century), when Florence, Rome, and Venice became the cultural capital of Europe; and Modern Italy from unification in 1861 to the present day." },
    { question: "Where can you see Roman ruins in Italy?", answer: "Rome itself has the Colosseum, Roman Forum, Pantheon, and Appian Way. Pompeii and Herculaneum near Naples are remarkably preserved Roman cities buried by Vesuvius in 79 AD. Verona has a stunning Roman arena. Ravenna has UNESCO-listed Byzantine mosaics. Sicily has Greek and Roman temples at Agrigento and Taormina. You'll find Roman remains in virtually every major Italian city." },
    { question: "What should I know about visiting Renaissance art in Italy?", answer: "Book tickets in advance for the Uffizi Gallery in Florence, the Vatican Museums in Rome, and the Accademia in Florence (where Michelangelo's David stands). Visit early morning or late afternoon to avoid the worst crowds. The Sistine Chapel does not allow photography. Many churches contain masterpieces by Caravaggio, Raphael, and Giotto that are free to view." },
    { question: "How many UNESCO World Heritage Sites does Italy have?", answer: "Italy has the most UNESCO World Heritage Sites of any country in the world — over 55 as of 2025. These include the Historic Centre of Rome, Venice and its Lagoon, the Historic Centre of Florence, Pompeii, the Amalfi Coast, Cinque Terre, the Dolomites, and many more. You can build an entire trip around UNESCO sites alone." },
    { question: "What was the Italian Risorgimento?", answer: "The Risorgimento ('Resurgence') was the 19th-century movement that unified the Italian peninsula into a single nation. Led by figures like Giuseppe Garibaldi, Cavour, and King Victor Emmanuel II, it culminated in the Kingdom of Italy in 1861, with Rome becoming the capital in 1871. The Altare della Patria monument in Rome's Piazza Venezia commemorates unification." },
    { question: "When is the best time to visit historical sites in Italy?", answer: "Spring (April-May) and autumn (September-October) offer the best combination of mild weather and smaller crowds. Summer brings intense heat and long lines at major sites like the Colosseum and Uffizi. Winter is quieter and cheaper, though some outdoor sites have shorter hours. Always book timed-entry tickets online when available." },
  ]} />

  <!-- Email Capture -->
  <div class="container-content reveal" style="padding-bottom: var(--space-6);">
    <EmailCapture
      leadMagnet="Get Our Free Italian Heritage Trail Guide"
      description="A chronological PDF guide to Italy's greatest historical sites — from Ancient Rome to the Renaissance, with logistics, tickets, and insider tips."
      bullets={[
        'Top 10 historical sites with opening hours and ticket prices',
        'Rome in 3 days: Colosseum, Forum, Vatican, Pantheon itinerary',
        'Renaissance Florence walking route with museum tips',
        'Pompeii & Herculaneum day-trip planner from Naples',
      ]}
      guideTag="pillar-history"
    />
  </div>

  <!-- Cross-links -->
  <section class="ww2-crosslinks reveal">
    <div class="container-content">
      <h3 class="ww2-crosslinks-heading">Explore More</h3>
      <div class="ww2-crosslinks-grid">
        <a href="/festivals/" class="ww2-crosslink-card">
          <span class="ww2-crosslink-icon">&#127914;</span>
          <span class="ww2-crosslink-label">Festival Calendar</span>
          <span class="ww2-crosslink-desc">25 festivals across 10 regions</span>
        </a>
        <a href="/cuisine/" class="ww2-crosslink-card">
          <span class="ww2-crosslink-icon">&#127860;</span>
          <span class="ww2-crosslink-label">Food & Cuisine</span>
          <span class="ww2-crosslink-desc">32 dishes across 4 regions</span>
        </a>
        <a href="/practical/" class="ww2-crosslink-card">
          <span class="ww2-crosslink-icon">&#127759;</span>
          <span class="ww2-crosslink-label">Practical Guide</span>
          <span class="ww2-crosslink-desc">Visa, transport, money & more</span>
        </a>
      </div>
    </div>
  </section>

</BaseLayout>

<!-- Scroll Reveal Observer -->
<script>
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    const revealObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add('visible');
