import '../styles/global.css';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Page Not Found | Discovering Italy</title>
</head>
<body class="error-page">
  <div class="bg"></div>
  <div class="palm left">üèõÔ∏è</div>
